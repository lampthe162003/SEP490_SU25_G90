@page "/Admins/LearningApplications/Detail/{id:int}"
@model SEP490_SU25_G90.Pages.Admins.LearningApplications.LearningApplicationDetailModel

@{
    ViewData["Title"] = "Thông tin chi tiết hồ sơ học";
    var app = Model.LearningApplication;
}
<!-- Sidebar Start -->
<div class="d-flex">
    <nav class="sidebar bg-light p-3" style="width: 250px; min-height: 100vh;">
        <div class="mb-4">
            <span class="fs-5 fw-bold">SEP490_SU25_G90</span>
        </div>
        <ul class="nav flex-column">
            <li class="nav-item mb-2">
                <a class="nav-link" href="#"><i class="bi bi-house-door"></i> Dashboard</a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link" href="#"><i class="bi bi-person"></i> Quản lý tài khoản</a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link" href="#"><i class="bi bi-newspaper"></i> Tin Tức</a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link" href="#"><i class="bi bi-journal-text"></i> Quản lý hồ sơ thi</a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link active fw-bold" href="/Admins/LearningApplications/List">
                    <i class="bi bi-folder2-open"></i> Quản lý hồ sơ học
                </a>
            </li>
        </ul>
    </nav>
    <div class="flex-grow-1 p-4">
        <h2>Thông tin chi tiết hồ sơ học</h2>
<div class="row">
    <div class="col-md-7">
        <table class="table table-bordered">
            <tr>
                <td><b>Tên học viên:</b> @app?.LearnerFullName</td>
            </tr>
            <tr>
                <td><b>CCCD:</b> @app?.LearnerCccdNumber</td>
            </tr>

            <tr>
                <td><b>Ngày sinh:</b> @app?.LearnerDob?.ToString("dd/MM/yyyy")</td>
            </tr>
            <tr>
                <td><b>Số điện thoại:</b> @app?.LearnerPhone</td>
            </tr>
            <tr>
                <td><b>Email:</b> @app?.LearnerEmail</td>
            </tr>
            <tr>
                <td><b>Loại bằng đăng ký:</b> @app?.LicenceTypeName</td>
            </tr>
            <tr>
                <td><b>Giảng viên phụ trách:</b> @app?.InstructorFullName</td>
            </tr>
            <tr>
                <td><b>Ngày đăng ký học:</b> @(app?.SubmittedAt != null ? app.SubmittedAt.Value.ToString("d/M/yyyy") : "")</td>
            </tr>
            <tr>
                <td>
                    <b>Trạng thái hồ sơ:</b> @app?.LearningStatusName
                </td>
            </tr>
            <tr>
                <td><b>Ghi chú nội bộ:</b> (Ghi chú thêm của quản trị viên)</td>
            </tr>
        </table>
    </div>
    <div class="col-md-5">
        <div>
            <b>Tài liệu đính kèm:</b>
            <ul style="margin-bottom: 0;">
                <li>
                    Giấy khám sức khỏe:
                    <span class="text-muted">Chưa có</span>
                </li>
                <li>
                    Căn cước công dân (CCCD):
                    <span class="text-muted">Chưa có</span>
                </li>
            </ul>
        </div>
        <div class="mt-3">
            <b>Các nút hành động:</b>
            <ul style="margin-bottom: 0;">
                <li>
                    [Chỉnh sửa hồ sơ]
                    <span class="text-muted">(hiển thị nếu trạng thái còn chỉnh sửa được)</span>
                </li>
                <li>
                    [Phân công giảng viên]
                    <span class="text-muted">(hiển thị nếu chưa có giảng viên)</span>
                </li>
            </ul>
        </div>
    </div>
</div>
<div class="mt-4">
    <a asp-page="./ListLearningApplication" class="btn btn-secondary">Quay lại</a>
</div>