@page "/Admin/Users/List"
@model SEP490_SU25_G90.Pages.Admins.User.UserListModel

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Danh sách người dùng";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="h3 mb-0">
                    <i class="fas fa-chalkboard-teacher text-primary me-2"></i>
                    Quản lý người dùng
                </h2>
                <button type="button" class="btn btn-primary" onclick="window.location.href='/Admin/Users/Create'">
                    <i class="fas fas-plus me-2"></i> 
                    Tạo tài khoản mới
                </button>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-search me-2"></i>
                        Tìm kiếm
                    </h5>
                </div>
                <div class="card-body">
                    <form>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="NameSearch" class="form-label">Họ Tên</label>
                                <input asp-for="NameSearch" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label for="EmailSearch" class="form-label">Email</label>
                                <input asp-for="EmailSearch" class="form-control" />
                            </div>
                            <div class="col-md-2 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fas fa-search me-2"></i>
                                    Tìm kiếm
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-list me-2"></i>
                        Danh sách người dùng
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.Users.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col">Họ Tên</th>
                                        <th scope="col">Vai Trò</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Thao Tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Users)
                                    {
                                        <tr>
                                            <td>@item.FullName</td>
                                            <td>
                                                @foreach (var role in item.UserRoles)
                                                {
                                                    @(role.Role.RoleName + " ")
                                                }
                                            </td>
                                            <td>@item.Email</td>
                                            <td>
                                                <a asp-page="./UserDetails" asp-route-id="@item.UserId">
                                                    <i class="fa-solid fa-eye"></i>
                                                </a>
                                                <a asp-page="#" asp-route-id="@item.UserId">
                                                    <i class="fa-solid fa-pen"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
