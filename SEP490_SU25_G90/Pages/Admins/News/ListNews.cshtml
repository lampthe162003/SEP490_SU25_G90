@page 
@using System.Net
@model SEP490_SU25_G90.Pages.Admins.News.ListNewsModel

@{
    ViewData["Title"] = "ListNews";
}

<div class="container mt-4">
    <h1 class="text-start mb-4 text-danger fw-bold d-flex justify-content-between">
        Tin Tức
        <a asp-page="Create" class="btn btn-success">+ Tạo tin tức</a>
    </h1>

    <div class="row">
        <div class="col-md-8">
            @if (Model.News == null || Model.News.Count == 0)
            {
                <div class="alert alert-info text-center">
                    Không có tin tức hoặc thông báo nào.
                </div>
            }
            else
            {
                foreach (var item in Model.News)
                {
                    <div class="row mb-4 align-items-center">
                        <div class="col-md-4">
                            <img src="@item.Image" class="img-fluid rounded shadow-sm" style="height:200px;object-fit:cover;" />
                        </div>
                        <div class="col-md-8">
                            <div class="card border-0 shadow-sm w-100">
                                <div class="card-body">
                                    <h3 class="card-title text-primary">@WebUtility.HtmlDecode(item.Title)</h3>
                                    <p class="card-text">@WebUtility.HtmlDecode(item.ShortContent)</p>
                                    <a asp-page="/Admins/News/DetailsNews"
                                       asp-route-id="@item.NewsId"
                                       class="text-primary fw-bold">
                                        Xem chi tiết
                                    </a>
                                    <div class="mt-3 d-flex justify-content-end">
                                        <a href="#" class="btn btn-warning btn-sm me-2">Edit</a>
                                        <a href="#" class="btn btn-danger btn-sm">Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr class="my-4" />
                }
            }
        </div>
    </div>

    <div class="d-flex justify-content-center mt-3">
        @if (Model.TotalPages > 1)
        {
            <nav>
                <ul class="pagination">
                    @if (Model.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-page="/Admins/News/ListNews" asp-route-CurrentPage="@(Model.CurrentPage - 1)">← Trước</a>
                        </li>
                    }

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-page="/Admins/News/ListNews" asp-route-CurrentPage="@i">@i</a>
                        </li>
                    }

                    @if (Model.CurrentPage < Model.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-page="/Admins/News/ListNews" asp-route-CurrentPage="@(Model.CurrentPage + 1)">Tiếp →</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
</div>
