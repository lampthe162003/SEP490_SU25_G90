@page
@model SEP490_SU25_G90.Pages.Admins.LearningProfile.InstructorDetailModel
@{
    ViewData["Title"] = "Chi tiết Giảng viên";
     Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="/Admins/LearningProfile/ManagerInstructor" class="text-decoration-none">
                                    <i class="fas fa-chalkboard-teacher me-1"></i>
                                    Quản lý Giảng viên
                                </a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Chi tiết</li>
                        </ol>
                    </nav>
                    <h2 class="h3 mb-0">
                        <i class="fas fa-user-circle text-primary me-2"></i>
                        Chi tiết Giảng viên
                    </h2>
                </div>
                <div>
                    <a href="/Admins/LearningProfile/ManagerInstructor" class="btn btn-secondary me-2">
                        <i class="fas fa-arrow-left me-2"></i>
                        Quay lại
                    </a>
                    <a href="/Admins/LearningProfile/EditInstructor?id=@Model.Instructor.UserId" class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i>
                        Chỉnh sửa
                    </a>
                </div>
            </div>

            @if (Model.Instructor != null)
            {
                <!-- Main Information Card -->
                <div class="row">
                    <div class="col-md-4">
                        <!-- Profile Card -->
                        <div class="card mb-4">
                            <div class="card-header bg-primary text-white">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-user me-2"></i>
                                    Thông tin cá nhân
                                </h5>
                            </div>
                            <div class="card-body text-center">
                                <!-- Profile Image -->
                                <div class="mb-3">
                                    @if (!string.IsNullOrEmpty(Model.Instructor.ProfileImageUrl))
                                    {
                                        <img src="@Model.Instructor.ProfileImageUrl" alt="Avatar" 
                                             class="rounded-circle border border-3 border-light shadow" 
                                             width="120" height="120" style="object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-secondary rounded-circle d-inline-flex align-items-center justify-content-center border border-3 border-light shadow" 
                                             style="width: 120px; height: 120px;">
                                            <i class="fas fa-user text-white fa-3x"></i>
                                        </div>
                                    }
                                </div>
                                
                                <!-- Name -->
                                <h4 class="card-title text-primary mb-2">@Model.Instructor.FullName</h4>
                                
                                <!-- Basic Info -->
                                <div class="row text-start">
                                    <div class="col-12 mb-2">
                                        <strong>ID:</strong> 
                                        <span class="badge bg-info ms-2">@Model.Instructor.UserId</span>
                                    </div>
                                    <div class="col-12 mb-2">
                                        <strong>Giới tính:</strong> 
                                        <span class="ms-2">
                                            @if (Model.Instructor.Gender == true)
                                            {
                                                <i class="fas fa-mars text-primary me-1"></i><span>Nam</span>
                                            }
                                            else if (Model.Instructor.Gender == false)
                                            {
                                                <i class="fas fa-venus text-danger me-1"></i><span>Nữ</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Chưa xác định</span>
                                            }
                                        </span>
                                    </div>
                                    <div class="col-12 mb-2">
                                        <strong>Ngày sinh:</strong> 
                                        <span class="ms-2">
                                            @if (Model.Instructor.Dob.HasValue)
                                            {
                                                <i class="fas fa-birthday-cake text-warning me-1"></i>
                                                @Model.Instructor.Dob.Value.ToString("dd/MM/yyyy")
                                            }
                                            else
                                            {
                                                <span class="text-muted">Chưa có</span>
                                            }
                                        </span>
                                    </div>
                                    @* <div class="col-12 mb-2">
                                        <strong>Số học viên:</strong> 
                                        <span class="badge bg-@(Model.Instructor.StudentCount > 0 ? "success" : "secondary") ms-2">
                                            @Model.Instructor.StudentCount học viên
                                        </span>
                                    </div> *@
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-8">
                        <!-- Contact Information -->
                        <div class="card mb-4">
                            <div class="card-header bg-info text-white">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-address-book me-2"></i>
                                    Thông tin liên hệ
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">
                                            <i class="fas fa-envelope text-primary me-2"></i>
                                            Email
                                        </label>
                                        <div class="form-control-plaintext border rounded p-2 bg-light">
                                            @if (!string.IsNullOrEmpty(Model.Instructor.Email))
                                            {
                                                <a href="mailto:@Model.Instructor.Email" class="text-decoration-none">
                                                    @Model.Instructor.Email
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Chưa có</span>
                                            }
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">
                                            <i class="fas fa-phone text-success me-2"></i>
                                            Số điện thoại
                                        </label>
                                        <div class="form-control-plaintext border rounded p-2 bg-light">
                                            @if (!string.IsNullOrEmpty(Model.Instructor.Phone))
                                            {
                                                <a href="tel:@Model.Instructor.Phone" class="text-decoration-none">
                                                    @Model.Instructor.Phone
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Chưa có</span>
                                            }
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">
                                            <i class="fas fa-id-card text-warning me-2"></i>
                                            Số CCCD
                                        </label>
                                        <div class="form-control-plaintext border rounded p-2 bg-light">
                                            @if (!string.IsNullOrEmpty(Model.Instructor.CccdNumber))
                                            {
                                                <span class="badge bg-info fs-6">@Model.Instructor.CccdNumber</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Chưa có</span>
                                            }
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">
                                            <i class="fas fa-map-marker-alt text-danger me-2"></i>
                                            Địa chỉ
                                        </label>
                                        <div class="form-control-plaintext border rounded p-2 bg-light">
                                            @if (!string.IsNullOrEmpty(Model.Instructor.AddressDisplay))
                                            {
                                                @Model.Instructor.AddressDisplay
                                            }
                                            else
                                            {
                                                <span class="text-muted">Chưa có</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Specializations -->
                        <div class="card mb-4">
                            <div class="card-header bg-success text-white">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-certificate me-2"></i>
                                    Loại bằng lái (Chuyên môn)
                                </h5>
                            </div>
                            <div class="card-body">
                                @if (Model.Instructor.Specializations.Any())
                                {
                                    <div class="d-flex flex-wrap gap-2">
                                        @foreach (var spec in Model.Instructor.Specializations)
                                        {
                                            <span class="badge bg-primary fs-6 px-3 py-2">
                                                <i class="fas fa-car me-2"></i>
                                                Bằng @spec.LicenceCode
                                            </span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <div class="text-center py-3">
                                        <i class="fas fa-exclamation-circle text-warning fa-2x mb-2"></i>
                                        <p class="text-muted mb-0">Chưa có chuyên môn nào được thiết lập</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- CCCD Images -->
                <div class="card">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-images me-2"></i>
                            Hình ảnh CCCD
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(Model.Instructor.CccdImageUrl))
                        {
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="text-center">
                                        <h6 class="fw-bold mb-3">
                                            <i class="fas fa-id-card me-2"></i>
                                            Mặt trước CCCD
                                        </h6>
                                        <div class="border rounded p-2 bg-light">
                                            <img src="@Model.Instructor.CccdImageUrl" alt="Mặt trước CCCD" 
                                                 class="img-fluid rounded shadow" 
                                                 style="max-height: 250px; cursor: pointer;"
                                                 onclick="showImageModal('@Model.Instructor.CccdImageUrl', 'Mặt trước CCCD')">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="text-center">
                                        <h6 class="fw-bold mb-3">
                                            <i class="fas fa-id-card me-2"></i>
                                            Mặt sau CCCD
                                        </h6>
                                        <div class="border rounded p-2 bg-light">
                                            <!-- Note: Trong DB chỉ có 1 ImageUrl, có thể cần tách thành 2 field riêng -->
                                            <img src="@Model.Instructor.CccdImageUrlMs" alt="Mặt sau CCCD" 
                                                 class="img-fluid rounded shadow" 
                                                 style="max-height: 250px; cursor: pointer;"
                                                 onclick="showImageModal('@Model.Instructor.CccdImageUrl', 'Mặt sau CCCD')">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="fas fa-image fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">Chưa có hình ảnh CCCD</h5>
                                <p class="text-muted">Hình ảnh CCCD chưa được tải lên hệ thống.</p>
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-danger text-center">
                    <i class="fas fa-exclamation-triangle fa-2x mb-3"></i>
                    <h4>Không tìm thấy thông tin giảng viên</h4>
                    <p>Vui lòng kiểm tra lại hoặc quay về danh sách giảng viên.</p>
                    <a href="/Admins/LearningProfile/ManagerInstructor" class="btn btn-primary">
                        <i class="fas fa-arrow-left me-2"></i>
                        Quay lại danh sách
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Image Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imageModalLabel">Xem ảnh</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img id="modalImage" src="" alt="" class="img-fluid">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showImageModal(imageUrl, title) {
            document.getElementById('imageModalLabel').textContent = title;
            document.getElementById('modalImage').src = imageUrl;
            document.getElementById('modalImage').alt = title;
            new bootstrap.Modal(document.getElementById('imageModal')).show();
        }
    </script>
}
