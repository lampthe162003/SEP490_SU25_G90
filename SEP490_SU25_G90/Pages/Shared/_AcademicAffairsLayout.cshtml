@{
    var path = Context.Request.Path.Value;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin-dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="sidebar" id="sidebar">

        <div class="menu-item"><a href="/AcademicAffairs/TestApplication"><i class="fas fa-clipboard-list"></i> <span>Quản lý hồ sơ thi</span></a></div>
        <div class="menu-item"><a href="/AcademicAffairs/LearningApplications/List"><i class="fas fa-clipboard-list"></i><span>Quản lý hồ sơ học</span></a></div>
        <div class="menu-item"><a href="/AcademicAffairs/Classes/ListClasses"><i class="fas fa-clipboard-list"></i><span>Quản lý lớp học</span></a></div>
        <div class="menu-item @(path.Contains("/AcademicAffairs/News/ListNews") ? "active" : "")">
            <a href="/AcademicAffairs/News/ListNews"><i class="fa-solid fa-envelope"></i><span>Quản lý thông báo</span></a>
        </div>
        <div class="menu-item"><a href="/AcademicAffairs/Car/CarList"><i class="fa-solid fa-car"></i><span>Quản lý xe</span></a></div>
        @RenderSection("Styles", required: false)
    </div>

    <div class="main">
        <div class="header">
            <div class="section-title">Trung Tâm Lái Xe Bắc Hà</div>
            <div class="user-menu">
                <div class="username">
                    <div><strong>@User.Identity?.Name</strong></div>
                    <div class="role">Phòng Đào Tạo</div>
                </div>
                <i class="fas fa-user-circle fa-2x" id="userIcon"></i>
                <div class="user-dropdown" id="userDropdown">
                    <a href="#">Hồ sơ người dùng</a>
                    <a href="/ChangePassword">Đổi mật khẩu</a>
                    <a href="/Logout">Đăng xuất</a>
                </div>
            </div>
        </div>

        <div class="content">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function() {
            // Toggle sidebar
            $('#toggleSidebar').click(function() {
                $('#sidebar').toggleClass('collapsed');
            });

            // Toggle user dropdown
            $('#userIcon').click(function(e) {
                e.stopPropagation();
                $('#userDropdown').toggle();
            });

            // Close dropdown when clicking outside
            $(document).click(function() {
                $('#userDropdown').hide();
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>