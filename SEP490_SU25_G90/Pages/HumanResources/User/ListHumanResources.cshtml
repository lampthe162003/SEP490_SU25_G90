@page
@model SEP490_SU25_G90.Pages.HumanResources.User.ListHumanResourcesModel
@{
    ViewData["Title"] = "Quản lý phòng nhân sự";
    Layout = "_HumanResourcesLayout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="h3 mb-0">
                    <i class="fas fa-chalkboard-teacher text-primary me-2"></i>
                    Quản lý Phòng đào tạo
                </h2>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addInstructorModal">
                    <i class="fas fa-plus me-2"></i>
                    Tạo tài khoản phòng nhân sự
                </button>
            </div>

            <!-- Search Form -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-search me-2"></i>
                        Tìm kiếm nhân viên
                    </h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-page-handler="Search">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="searchName" class="form-label">Tên nhân viên</label>
                                <input type="text" class="form-control" id="searchName"
                                       asp-for="SearchName" placeholder="Nhập tên nhân viên...">
                            </div>
                            <div class="col-md-2 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fas fa-search me-2"></i>
                                    Tìm kiếm
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Instructors Table -->
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-list me-2"></i>
                        Danh sách Phòng đào tạo (@Model.ListHR.Count)
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.ListHR.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col">ID</th>
                                        @* <th scope="col">Ảnh</th> *@
                                        <th scope="col">Họ và tên</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Số điện thoại</th>
                                        @* <th scope="col">Địa chỉ</th> *@
                                        <th scope="col" style="text-align: center">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var hr in Model.ListHR)
                                    {
                                        <tr>
                                            <td class="fw-bold">@hr.UserId</td>
                                            <td>
                                                <div>
                                                    <strong>@hr.FullName</strong>
                                                    <br>
                                                    <small class="text-muted">
                                                        @(hr.Gender == true ? "Nam" : "Nữ") -
                                                        @(hr.Dob?.ToString("dd/MM/yyyy") ?? "N/A")
                                                    </small>
                                                </div>
                                            </td>
                                            <td>
                                                <a href="mailto:@hr.Email" class="text-decoration-none">
                                                    @hr.Email
                                                </a>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(hr.Phone))
                                                {
                                                    <a href="tel:@hr.Phone" class="text-decoration-none">
                                                        @hr.Phone
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Chưa có</span>
                                                }
                                            </td>
                                            <td style="text-align: center">
                                                <div class="btn-group" role="group">
                                                    <a type="button" class="btn btn-sm btn-outline-primary" style="margin-right:15px"
                                                            asp-page="./HumanResourcesDetail" asp-route-id="@hr.UserId">
                                                        <i class="fa-solid fa-eye"></i>
                                                    </a>
                                                    <a type="button" class="btn btn-sm btn-outline-warning" style="margin-right:15px"
                                                            asp-page="./UpdateHumanResources" asp-route-id="@hr.UserId">
                                                        <i class="fas fa-edit me-1"></i>
                                                    </a>
                                                    @* <button type="button" class="btn btn-sm btn-outline-danger"
                                                            onclick="deleteInstructor(@hr.UserId, '@hr.FullName')">
                                                        <i class="fa-solid fa-trash-can"></i>
                                                    </button> *@
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-user-times fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Không tìm thấy nhân viên nào</h5>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Instructor Modal -->
<div class="modal fade" id="addInstructorModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-user-plus me-2"></i>
                    Thêm nhân viên phòng nhân sự
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="text-muted">Chức năng thêm giảng viên sẽ được phát triển trong giai đoạn tiếp theo.</p>
            </div>
        </div>
    </div>
</div>

