@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        let currentImageUrl = '';
        
        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            // CCCD number validation
            const cccdInput = document.getElementById('cccdNumber');
            if (cccdInput) {
                cccdInput.addEventListener('input', function(e) {
                    // Remove any non-digit characters
                    e.target.value = e.target.value.replace(/[^\d]/g, '');
                    
                    // Limit to 12 digits
                    if (e.target.value.length > 12) {
                        e.target.value = e.target.value.substring(0, 12);
                    }
                });

                cccdInput.addEventListener('keypress', function(e) {
                    // Only allow numbers and control keys
                    if (!/^\d$/.test(e.key) && !['Backspace', 'Delete', 'Tab', 'Escape', 'Enter', 'ArrowLeft', 'ArrowRight'].includes(e.key)) {
                        e.preventDefault();
                    }
                });
            }

            // Setup file preview for all file inputs
            setupFilePreview();
            
            // Auto dismiss alerts after 5 seconds
            const alerts = document.querySelectorAll('.alert:not(.alert-permanent)');
            alerts.forEach(function(alert) {
                setTimeout(function() {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }, 5000);
            });
        });

        // Setup file preview functionality
        function setupFilePreview() {
            // Profile image file input
            const profileImageInput = document.querySelector('input[name="CreateRequest.ProfileImageFile"]');
            if (profileImageInput) {
                profileImageInput.addEventListener('change', function(e) {
                    handleFilePreview(e.target, 'profile');
                });
            }

            // CCCD front image file input
            const cccdFrontInput = document.querySelector('input[name="CreateRequest.CccdImageFrontFile"]');
            if (cccdFrontInput) {
                cccdFrontInput.addEventListener('change', function(e) {
                    handleFilePreview(e.target, 'cccd-front');
                });
            }

            // CCCD back image file input
            const cccdBackInput = document.querySelector('input[name="CreateRequest.CccdImageBackFile"]');
            if (cccdBackInput) {
                cccdBackInput.addEventListener('change', function(e) {
                    handleFilePreview(e.target, 'cccd-back');
                });
            }

            // Health certificate image file input
            const healthCertInput = document.querySelector('input[name="CreateRequest.HealthCertificateImageFile"]');
            if (healthCertInput) {
                healthCertInput.addEventListener('change', function(e) {
                    handleFilePreview(e.target, 'health-cert');
                });
            }
        }

        // Handle file preview
        function handleFilePreview(input, type) {
            let previewDiv;
            switch(type) {
                case 'profile':
                    previewDiv = document.querySelector('.new-profile-image-preview');
                    break;
                case 'cccd-front':
                    previewDiv = document.querySelector('.new-cccd-front-preview');
                    break;
                case 'cccd-back':
                    previewDiv = document.querySelector('.new-cccd-back-preview');
                    break;
                case 'health-cert':
                    previewDiv = document.querySelector('.new-health-cert-preview');
                    break;
            }

            const previewImg = previewDiv ? previewDiv.querySelector('img') : null;
            
            if (input.files && input.files[0]) {
                const file = input.files[0];
                
                // Validate file type
                if (!file.type.startsWith('image/')) {
                    input.classList.add('is-invalid');
                    showFileError(input, 'Vui lòng chọn file ảnh hợp lệ');
                    hideImagePreview(previewDiv);
                    return;
                }
                
                // Validate file size (max 5MB)
                if (file.size > 5 * 1024 * 1024) {
                    input.classList.add('is-invalid');
                    showFileError(input, 'Kích thước file không được quá 5MB');
                    hideImagePreview(previewDiv);
                    return;
                }
                
                input.classList.remove('is-invalid');
                input.classList.add('is-valid');
                hideFileError(input);
                
                // Create preview
                const reader = new FileReader();
                reader.onload = function(e) {
                    if (previewImg) {
                        previewImg.src = e.target.result;
                        previewDiv.style.display = 'block';
                    }
                };
                reader.readAsDataURL(file);
            } else {
                input.classList.remove('is-invalid', 'is-valid');
                hideFileError(input);
                hideImagePreview(previewDiv);
            }
        }

        // Show file error
        function showFileError(input, message) {
            let errorDiv = input.parentNode.querySelector('.file-error');
            if (!errorDiv) {
                errorDiv = document.createElement('div');
                errorDiv.className = 'file-error text-danger small mt-1';
                input.parentNode.appendChild(errorDiv);
            }
            errorDiv.innerHTML = '<i class="fas fa-exclamation-triangle me-1"></i>' + message;
        }

        // Hide file error
        function hideFileError(input) {
            const errorDiv = input.parentNode.querySelector('.file-error');
            if (errorDiv) {
                errorDiv.remove();
            }
        }

        // Hide image preview
        function hideImagePreview(previewDiv) {
            if (previewDiv) {
                previewDiv.style.display = 'none';
            }
        }

        // Show modal from preview image
        function showImageModalFromPreview(imgElement, title) {
            const modal = new bootstrap.Modal(document.getElementById('imagePreviewModal'));
            const modalImage = document.getElementById('previewImage');
            const modalTitle = document.getElementById('imagePreviewModalLabel');
            const imageLoading = document.getElementById('imageLoading');
            const imageError = document.getElementById('imageError');

            // Set title
            modalTitle.textContent = title;
            
            // Set current image URL for opening in new tab
            currentImageUrl = imgElement.src;

            // Reset states
            modalImage.style.display = 'none';
            imageError.style.display = 'none';
            imageLoading.style.display = 'block';

            // Show modal
            modal.show();

            // Load image
