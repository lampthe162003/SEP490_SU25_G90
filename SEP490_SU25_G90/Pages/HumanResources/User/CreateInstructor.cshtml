@page
@model SEP490_SU25_G90.Pages.HumanResources.User.CreateInstructorModel
@{
    ViewData["Title"] = "Tạo tài khoản Giảng viên";
    Layout = "~/Pages/Shared/_HumanResourcesLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="h3 mb-0">
                    <i class="fas fa-user-plus text-primary me-2"></i>
                    Tạo tài khoản Giảng viên mới
                </h2>
                <div>
                    <a asp-page="./ManagerInstructor" class="btn btn-secondary me-2">
                        <i class="fas fa-arrow-left me-2"></i>
                        Quay trở lại
                    </a>
                </div>
            </div>

            <!-- Alert Messages -->
            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert alert-@(Model.MessageType == "success" ? "success" : "danger") alert-dismissible fade show" role="alert">
                    <i class="fas fa-@(Model.MessageType == "success" ? "check-circle" : "exclamation-triangle") me-2"></i>
                    @Model.Message
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Create Form -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-plus me-2"></i>
                        Thông tin Giảng viên mới
                    </h5>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div class="row">
                            <!-- Basic Information -->
                            <div class="col-md-6">
                                <h6 class="text-primary mb-3">
                                    <i class="fas fa-user me-2"></i>
                                    Thông tin cơ bản
                                </h6>

                                <!-- Profile Image Section -->
                                <div class="mb-3">
                                    <label class="form-label">
                                        <i class="fas fa-user-circle me-1"></i>
                                        Ảnh đại diện
                                    </label>
                                    <input asp-for="CreateRequest.ProfileImageFile" class="form-control" type="file" accept="image/*" />
                                    <span asp-validation-for="CreateRequest.ProfileImageFile" class="text-danger"></span>
                                    <div class="create-profile-image-preview mt-2" style="display: none;">
                                        <div class="position-relative d-inline-block preview-container">
                                            <img class="img-thumbnail preview-image" style="max-width: 150px; max-height: 150px; cursor: pointer;" 
                                                 onclick="showImageModalFromPreview(this, 'Ảnh đại diện')" />
                                            <div class="position-absolute top-0 start-0 w-100 h-100 preview-overlay d-flex align-items-center justify-content-center" 
                                                 style="background: rgba(0,0,0,0.7); opacity: 0; transition: opacity 0.3s;">
                                                <i class="fas fa-expand text-white fa-2x"></i>
                                            </div>
                                        </div>
                                        <div class="mt-1">
                                            <small class="text-muted">Preview ảnh đại diện</small>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="CreateRequest.Email" class="form-label">Email *</label>
                                    <input asp-for="CreateRequest.Email" class="form-control" />
                                    <span asp-validation-for="CreateRequest.Email" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="CreateRequest.FirstName" class="form-label">Họ *</label>
                                    <input asp-for="CreateRequest.FirstName" class="form-control" />
                                    <span asp-validation-for="CreateRequest.FirstName" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="CreateRequest.MiddleName" class="form-label">Tên đệm</label>
                                    <input asp-for="CreateRequest.MiddleName" class="form-control" />
                                    <span asp-validation-for="CreateRequest.MiddleName" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="CreateRequest.LastName" class="form-label">Tên *</label>
                                    <input asp-for="CreateRequest.LastName" class="form-control" />
                                    <span asp-validation-for="CreateRequest.LastName" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="CreateRequest.Phone" class="form-label">Số điện thoại *</label>
                                    <input asp-for="CreateRequest.Phone" class="form-control" placeholder="Ví dụ: 0987654321" pattern="^(0[3|5|7|8|9])[0-9]{8}$" title="Số điện thoại Việt Nam hợp lệ (10 số, bắt đầu bằng 03, 05, 07, 08, 09)" maxlength="10" required />
                                    <span asp-validation-for="CreateRequest.Phone" class="text-danger"></span>
                                    <small class="text-muted">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Số điện thoại Việt Nam (10 số, bắt đầu bằng 03, 05, 07, 08, 09)
                                    </small>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="CreateRequest.Dob" class="form-label">Ngày sinh *</label>
                                    <input asp-for="CreateRequest.Dob" type="date" class="form-control" required />
                                    <span asp-validation-for="CreateRequest.Dob" class="text-danger"></span>
                                    <small class="text-muted">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Tuổi phải từ 18 đến 65
                                    </small>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="CreateRequest.Gender" class="form-label">Giới tính *</label>
                                    <select asp-for="CreateRequest.Gender" class="form-select" required>
                                        <option value="">-- Chọn giới tính --</option>
                                        <option value="true">Nam</option>
                                        <option value="false">Nữ</option>
                                    </select>
                                    <span asp-validation-for="CreateRequest.Gender" class="text-danger"></span>
                                </div>

                                <h6 class="text-success mb-3 mt-4">
                                    <i class="fas fa-map-marker-alt me-2"></i>
                                    Địa chỉ
                                </h6>

                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label asp-for="CreateRequest.CityId" class="form-label">Tỉnh/Thành phố *</label>
                                            <select asp-for="CreateRequest.CityId" class="form-select" id="citySelect" required>
                                                <option value="">-- Chọn tỉnh/thành phố --</option>
                                                @foreach (var city in Model.AvailableCities)
                                                {
                                                    <option value="@city.CityId">@city.CityName</option>
                                                }
                                            </select>
                                            <span asp-validation-for="CreateRequest.CityId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label asp-for="CreateRequest.ProvinceId" class="form-label">Quận/Huyện *</label>
                                            <select asp-for="CreateRequest.ProvinceId" class="form-select" id="provinceSelect" required disabled>
                                                <option value="">-- Chọn quận/huyện --</option>
                                            </select>
                                            <span asp-validation-for="CreateRequest.ProvinceId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label asp-for="CreateRequest.WardId" class="form-label">Phường/Xã *</label>
                                            <select asp-for="CreateRequest.WardId" class="form-select" id="wardSelect" required disabled>
                                                <option value="">-- Chọn phường/xã --</option>
                                            </select>
                                            <span asp-validation-for="CreateRequest.WardId" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="CreateRequest.HouseNumber" class="form-label">Số nhà</label>
                                    <input asp-for="CreateRequest.HouseNumber" class="form-control" placeholder="Ví dụ: 123, 45A" />
                                    <span asp-validation-for="CreateRequest.HouseNumber" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- CCCD & Specializations -->
                            <div class="col-md-6">
                                <h6 class="text-info mb-3">
                                    <i class="fas fa-id-card me-2"></i>
                                    Thông tin CCCD
                                </h6>

                                <div class="mb-3">
                                    <label asp-for="CreateRequest.CccdNumber" class="form-label">
                                        Số CCCD * 
                                        <small class="text-muted">(12 chữ số)</small>
                                    </label>
                                    <input asp-for="CreateRequest.CccdNumber" class="form-control" placeholder="Nhập 12 chữ số CCCD" maxlength="12" minlength="12" pattern="^\d{12}$" title="Số CCCD phải có đúng 12 chữ số" required />
                                    <span asp-validation-for="CreateRequest.CccdNumber" class="text-danger"></span>
                                    <small class="text-muted">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Chỉ được nhập số, đúng 12 chữ số
                                    </small>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="CreateRequest.CccdImageFrontFile" class="form-label">
                                        <i class="fas fa-image me-1"></i>
                                        Ảnh CCCD mặt trước
                                    </label>
                                    <input asp-for="CreateRequest.CccdImageFrontFile" class="form-control" type="file" accept="image/*" />
                                    <span asp-validation-for="CreateRequest.CccdImageFrontFile" class="text-danger"></span>
                                    <div class="create-image-preview-front mt-2" style="display: none;">
                                        <div class="position-relative d-inline-block preview-container">
                                            <img class="img-thumbnail preview-image" style="max-width: 200px; max-height: 120px; cursor: pointer;" 
                                                 onclick="showImageModalFromPreview(this, 'Ảnh CCCD mặt trước')" />
                                            <div class="position-absolute top-0 start-0 w-100 h-100 preview-overlay d-flex align-items-center justify-content-center" 
                                                 style="background: rgba(0,0,0,0.7); opacity: 0; transition: opacity 0.3s;">
                                                <i class="fas fa-expand text-white fa-2x"></i>
                                            </div>
                                        </div>
                                        <div class="mt-1">
                                            <small class="text-muted">Preview ảnh mặt trước</small>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="CreateRequest.CccdImageBackFile" class="form-label">
                                        <i class="fas fa-image me-1"></i>
                                        Ảnh CCCD mặt sau
                                    </label>
                                    <input asp-for="CreateRequest.CccdImageBackFile" class="form-control" type="file" accept="image/*" />
                                    <span asp-validation-for="CreateRequest.CccdImageBackFile" class="text-danger"></span>
                                    <div class="create-image-preview-back mt-2" style="display: none;">
                                        <div class="position-relative d-inline-block preview-container">
                                            <img class="img-thumbnail preview-image" style="max-width: 200px; max-height: 120px; cursor: pointer;" 
                                                 onclick="showImageModalFromPreview(this, 'Ảnh CCCD mặt sau')" />
                                            <div class="position-absolute top-0 start-0 w-100 h-100 preview-overlay d-flex align-items-center justify-content-center" 
                                                 style="background: rgba(0,0,0,0.7); opacity: 0; transition: opacity 0.3s;">
                                                <i class="fas fa-expand text-white fa-2x"></i>
                                            </div>
                                        </div>
                                        <div class="mt-1">
                                            <small class="text-muted">Preview ảnh mặt sau</small>
                                        </div>
                                    </div>
                                </div>

                                <h6 class="text-primary mb-3 mt-4">
                                    <i class="fas fa-certificate me-2"></i>
                                    Chuyên môn giảng dạy
                                </h6>
                                
                                <div class="mb-3">
                                    <label class="form-label">Loại bằng lái có thể dạy</label>
                                    <div class="border rounded p-3" style="max-height: 250px; overflow-y: auto;">
                                        @foreach (var licenceType in Model.AvailableLicenceTypes)
                                        {
                                            <div class="form-check mb-2">
                                                <input class="form-check-input" type="checkbox" 
                                                       name="CreateRequest.SelectedSpecializations" 
                                                       value="@licenceType.LicenceTypeId"
                                                       id="create_licence_@licenceType.LicenceTypeId" />
                                                <label class="form-check-label" for="create_licence_@licenceType.LicenceTypeId">
                                                    <span class="badge bg-primary me-2">@licenceType.LicenceCode</span>
                                                    Bằng lái @licenceType.LicenceCode
                                                </label>
                                            </div>
                                        }
                                    </div>
                                    <small class="text-muted">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Chọn các loại bằng lái mà giảng viên có thể giảng dạy
                                    </small>
                                </div>
                            </div>
                        </div>

                        <!-- Info Alert -->
                        <div class="alert alert-info mt-4">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Lưu ý:</strong> 
                            <ul class="mb-0 mt-2">
                                <li>Mật khẩu sẽ được tạo tự động (12 ký tự) và gửi về email giảng viên</li>
                                <li>Chọn file ảnh để upload (jpg, png, jpeg, gif)</li>
                                <li>Kích thước file ảnh không được vượt quá 5MB</li>
                                <li>Trường có dấu (*) là bắt buộc</li>
                            </ul>
                        </div>

                        <!-- Action Buttons -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-flex justify-content-end">
                                    <a asp-page="./ManagerInstructor" class="btn btn-secondary me-3">
                                        <i class="fas fa-times me-2"></i>
                                        Hủy
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save me-2"></i>
                                        Tạo tài khoản
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Image Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imageModalLabel">
                    <i class="fas fa-image me-2"></i>
                    <span id="imageModalTitle">Xem ảnh</span>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <div id="imageLoading" class="d-none">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Đang tải...</span>
                    </div>
                    <p class="mt-2 text-muted">Đang tải ảnh...</p>
                </div>
                <div id="imageError" class="d-none alert alert-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Không thể tải ảnh. Vui lòng kiểm tra URL.
                </div>
                <img id="modalImage" class="img-fluid rounded shadow" style="max-height: 70vh;" alt="Image" />
            </div>
            <div class="modal-footer">
                <a id="openInNewTab" href="#" target="_blank" class="btn btn-outline-primary">
                    <i class="fas fa-external-link-alt me-2"></i>
                    Mở trong tab mới
                </a>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>
                    Đóng
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            setupCreateFormFilePreview();
            setupAddressCascadingDropdowns();
        });

        function setupCreateFormFilePreview() {
            // File upload preview
            const createProfileImageInput = document.querySelector('input[name="CreateRequest.ProfileImageFile"]');
            const createFrontImageInput = document.querySelector('input[name="CreateRequest.CccdImageFrontFile"]');
            const createBackImageInput = document.querySelector('input[name="CreateRequest.CccdImageBackFile"]');

            if (createProfileImageInput) {
                createProfileImageInput.addEventListener('change', function(e) {
                    handleCreateFilePreview(e.target, 'create-profile');
                });
            }

            if (createFrontImageInput) {
                createFrontImageInput.addEventListener('change', function(e) {
                    handleCreateFilePreview(e.target, 'create-front');
                });
            }

            if (createBackImageInput) {
                createBackImageInput.addEventListener('change', function(e) {
                    handleCreateFilePreview(e.target, 'create-back');
                });
            }

            // CCCD input validation
            const createCccdInput = document.querySelector('input[name="CreateRequest.CccdNumber"]');
            if (createCccdInput) {
                createCccdInput.addEventListener('input', function(e) {
                    e.target.value = e.target.value.replace(/[^\d]/g, '');
                    if (e.target.value.length > 12) {
                        e.target.value = e.target.value.substring(0, 12);
                    }
                    
                    // Real-time validation feedback
                    validateCccdNumber(e.target);
                });

                createCccdInput.addEventListener('keypress', function(e) {
                    if (!/^\d$/.test(e.key) && !['Backspace', 'Delete', 'Tab', 'Escape', 'Enter', 'ArrowLeft', 'ArrowRight'].includes(e.key)) {
                        e.preventDefault();
                    }
                });
            }
            
            // Phone number input validation
            const createPhoneInput = document.querySelector('input[name="CreateRequest.Phone"]');
            if (createPhoneInput) {
                createPhoneInput.addEventListener('input', function(e) {
                    // Allow only digits
                    e.target.value = e.target.value.replace(/[^\d]/g, '');
                    if (e.target.value.length > 10) {
                        e.target.value = e.target.value.substring(0, 10);
                    }
                    
                    // Real-time validation feedback
                    validatePhoneNumber(e.target);
                });

                createPhoneInput.addEventListener('keypress', function(e) {
                    if (!/^\d$/.test(e.key) && !['Backspace', 'Delete', 'Tab', 'Escape', 'Enter', 'ArrowLeft', 'ArrowRight'].includes(e.key)) {
                        e.preventDefault();
                    }
                });
            }
            
            // Date of birth validation
            const createDobInput = document.querySelector('input[name="CreateRequest.Dob"]');
            if (createDobInput) {
                createDobInput.addEventListener('blur', function(e) {
                    validateDateOfBirth(e.target);
                });
            }
        }

        function handleCreateFilePreview(input, type) {
            let previewDiv;
            switch(type) {
                case 'create-profile':
                    previewDiv = document.querySelector('.create-profile-image-preview');
                    break;
                case 'create-front':
                    previewDiv = document.querySelector('.create-image-preview-front');
                    break;
                case 'create-back':
                    previewDiv = document.querySelector('.create-image-preview-back');
                    break;
            }

            const previewImg = previewDiv ? previewDiv.querySelector('img') : null;
            
            if (input.files && input.files[0]) {
                const file = input.files[0];
                
                // Validate file type
                if (!file.type.startsWith('image/')) {
                    input.classList.add('is-invalid');
                    showCreateFileError(input, 'Vui lòng chọn file ảnh hợp lệ');
                    hideCreateImagePreview(previewDiv);
                    return;
                }
                
                // Validate file size (max 5MB)
                if (file.size > 5 * 1024 * 1024) {
                    input.classList.add('is-invalid');
                    showCreateFileError(input, 'Kích thước file không được quá 5MB');
                    hideCreateImagePreview(previewDiv);
                    return;
                }
                
                input.classList.remove('is-invalid');
                input.classList.add('is-valid');
                hideCreateFileError(input);
                
                // Create preview
                const reader = new FileReader();
                reader.onload = function(e) {
                    if (previewImg) {
                        previewImg.src = e.target.result;
                        previewDiv.style.display = 'block';
                    }
                };
                reader.readAsDataURL(file);
            } else {
                input.classList.remove('is-invalid', 'is-valid');
                hideCreateFileError(input);
                hideCreateImagePreview(previewDiv);
            }
        }

        function hideCreateImagePreview(previewDiv) {
            if (previewDiv) {
                previewDiv.style.display = 'none';
            }
        }

        function showCreateFileError(input, message) {
            let errorDiv = input.parentNode.querySelector('.create-file-error');
            if (!errorDiv) {
                errorDiv = document.createElement('div');
                errorDiv.className = 'create-file-error text-danger small mt-1';
                input.parentNode.appendChild(errorDiv);
            }
            errorDiv.innerHTML = '<i class="fas fa-exclamation-triangle me-1"></i>' + message;
        }

        function hideCreateFileError(input) {
            const errorDiv = input.parentNode.querySelector('.create-file-error');
            if (errorDiv) {
                errorDiv.remove();
            }
        }

        // Validation functions
        function validateCccdNumber(input) {
            const value = input.value;
            const isValid = /^\d{12}$/.test(value) || value === '';
            
            if (isValid) {
                input.classList.remove('is-invalid');
                input.classList.add('is-valid');
                hideValidationError(input, 'cccd-error');
            } else {
                input.classList.remove('is-valid');
                input.classList.add('is-invalid');
                if (value.length > 0 && value.length < 12) {
                    showValidationError(input, 'cccd-error', 'Số CCCD phải có đúng 12 chữ số');
                } else if (value.length > 0 && !/^\d+$/.test(value)) {
                    showValidationError(input, 'cccd-error', 'Số CCCD chỉ được chứa số');
                }
            }
        }
        
        function validatePhoneNumber(input) {
            const value = input.value;
            const isValid = /^(0[3|5|7|8|9])[0-9]{8}$/.test(value) || value === '';
            
            if (isValid) {
                input.classList.remove('is-invalid');
                input.classList.add('is-valid');
                hideValidationError(input, 'phone-error');
            } else {
                input.classList.remove('is-valid');
                input.classList.add('is-invalid');
                if (value.length > 0) {
                    if (value.length !== 10) {
                        showValidationError(input, 'phone-error', 'Số điện thoại phải có đúng 10 số');
                    } else if (!/^0[3|5|7|8|9]/.test(value)) {
                        showValidationError(input, 'phone-error', 'Số điện thoại phải bắt đầu bằng 03, 05, 07, 08, hoặc 09');
                    }
                }
            }
        }
        
        function validateDateOfBirth(input) {
            const value = input.value;
            if (value) {
                const dob = new Date(value);
                const today = new Date();
                const age = today.getFullYear() - dob.getFullYear();
                const monthDiff = today.getMonth() - dob.getMonth();
                
                if (monthDiff < 0 || (monthDiff === 0 && today.getDate() < dob.getDate())) {
                    age--;
                }
                
                if (age < 18) {
                    input.classList.add('is-invalid');
                    showValidationError(input, 'dob-error', 'Tuổi của giảng viên chưa đủ 18');
                } else if (age > 65) {
                    input.classList.add('is-invalid');
                    showValidationError(input, 'dob-error', 'Tuổi của giảng viên không được quá 65');
                } else {
                    input.classList.remove('is-invalid');
                    input.classList.add('is-valid');
                    hideValidationError(input, 'dob-error');
                }
            }
        }
        
        function showValidationError(input, errorId, message) {
            let errorDiv = document.getElementById(errorId);
            if (!errorDiv) {
                errorDiv = document.createElement('div');
                errorDiv.id = errorId;
                errorDiv.className = 'invalid-feedback d-block';
                input.parentNode.appendChild(errorDiv);
            }
            errorDiv.innerHTML = '<i class="fas fa-exclamation-triangle me-1"></i>' + message;
        }
        
        function hideValidationError(input, errorId) {
            const errorDiv = document.getElementById(errorId);
            if (errorDiv) {
                errorDiv.remove();
            }
        }

        // Show modal from preview image
        function showImageModalFromPreview(imgElement, title) {
            const modal = new bootstrap.Modal(document.getElementById('imageModal'));
            const modalImage = document.getElementById('modalImage');
            const modalTitle = document.getElementById('imageModalTitle');
            const imageLoading = document.getElementById('imageLoading');
            const imageError = document.getElementById('imageError');
            const openInNewTab = document.getElementById('openInNewTab');

            // Set title
            modalTitle.textContent = title;
            
            // Set up "Open in new tab" link
            openInNewTab.href = imgElement.src;

            // Reset states
            modalImage.style.display = 'none';
            imageError.classList.add('d-none');
            imageLoading.classList.remove('d-none');

            // Show modal
            modal.show();

            // Load image
            modalImage.src = imgElement.src;
            imageLoading.classList.add('d-none');
            modalImage.style.display = 'block';
        }

        // Address cascading dropdowns functionality
        function setupAddressCascadingDropdowns() {
            const citySelect = document.getElementById('citySelect');
            const provinceSelect = document.getElementById('provinceSelect');
            const wardSelect = document.getElementById('wardSelect');

            // City change event
            citySelect.addEventListener('change', function() {
                const cityId = this.value;
                if (cityId) {
                    loadProvinces(cityId);
                } else {
                    resetSelect(provinceSelect, '-- Chọn quận/huyện --');
                    resetSelect(wardSelect, '-- Chọn phường/xã --');
                    provinceSelect.disabled = true;
                    wardSelect.disabled = true;
                }
            });

            // Province change event
            provinceSelect.addEventListener('change', function() {
                const provinceId = this.value;
                if (provinceId) {
                    loadWards(provinceId);
                } else {
                    resetSelect(wardSelect, '-- Chọn phường/xã --');
                    wardSelect.disabled = true;
                }
            });
        }

        function loadProvinces(cityId) {
            showLoading(document.getElementById('provinceSelect'));
            
            fetch(`?handler=Provinces&cityId=${cityId}`)
                .then(response => response.json())
                .then(data => {
                    const provinceSelect = document.getElementById('provinceSelect');
                    resetSelect(provinceSelect, '-- Chọn quận/huyện --');
                    
                    data.forEach(province => {
                        const option = document.createElement('option');
                        option.value = province.provinceId;
                        option.textContent = province.provinceName;
                        provinceSelect.appendChild(option);
                    });
                    
                    provinceSelect.disabled = false;
                    resetSelect(document.getElementById('wardSelect'), '-- Chọn phường/xã --');
                    document.getElementById('wardSelect').disabled = true;
                })
                .catch(error => {
                    console.error('Error loading provinces:', error);
                    showError('Không thể tải danh sách quận/huyện');
                });
        }

        function loadWards(provinceId) {
            showLoading(document.getElementById('wardSelect'));
            
            fetch(`?handler=Wards&provinceId=${provinceId}`)
                .then(response => response.json())
                .then(data => {
                    const wardSelect = document.getElementById('wardSelect');
                    resetSelect(wardSelect, '-- Chọn phường/xã --');
                    
                    data.forEach(ward => {
                        const option = document.createElement('option');
                        option.value = ward.wardId;
                        option.textContent = ward.wardName;
                        wardSelect.appendChild(option);
                    });
                    
                    wardSelect.disabled = false;
                })
                .catch(error => {
                    console.error('Error loading wards:', error);
                    showError('Không thể tải danh sách phường/xã');
                });
        }


        function resetSelect(selectElement, defaultText) {
            selectElement.innerHTML = `<option value="">${defaultText}</option>`;
        }

        function showLoading(selectElement) {
            selectElement.innerHTML = '<option value="">Đang tải...</option>';
        }

        function showError(message) {
            // You can customize this to show error messages in your preferred way
            console.error(message);
        }

        function validateDateOfBirth(input) {
            if (!input.value) return;
            
            const selectedDate = new Date(input.value);
            const today = new Date();
            const age = today.getFullYear() - selectedDate.getFullYear();
            const monthDiff = today.getMonth() - selectedDate.getMonth();
            
            // Calculate exact age
            let exactAge = age;
            if (monthDiff < 0 || (monthDiff === 0 && today.getDate() < selectedDate.getDate())) {
                exactAge--;
            }
            
            // Remove existing error message
            const existingError = input.parentNode.querySelector('.age-error');
            if (existingError) {
                existingError.remove();
            }
            
            input.classList.remove('is-invalid', 'is-valid');
            
            // Check age constraints (18-65 for instructors)
            if (exactAge < 18) {
                showFieldError(input, 'Tuổi của giảng viên chưa đủ 18.', 'age-error');
                input.classList.add('is-invalid');
            } else if (exactAge > 65) {
                showFieldError(input, 'Tuổi của giảng viên không được quá 65.', 'age-error');
                input.classList.add('is-invalid');
            } else {
                input.classList.add('is-valid');
            }
        }
        
        function showFieldError(input, message, className) {
            let errorDiv = input.parentNode.querySelector('.' + className);
            if (!errorDiv) {
                errorDiv = document.createElement('div');
                errorDiv.className = className + ' text-danger small mt-1';
                input.parentNode.appendChild(errorDiv);
            }
            errorDiv.innerHTML = '<i class="fas fa-exclamation-triangle me-1"></i>' + message;
        }
