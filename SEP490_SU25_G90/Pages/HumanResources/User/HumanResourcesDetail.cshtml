@page
@model SEP490_SU25_G90.Pages.HumanResources.User.HumanResourcesDetailModel
@{
    ViewData["Title"] = "Chi tiết nhân viên";
    Layout = "_HumanResourcesLayout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="/HumanResources/User/ManagerInstructor" class="text-decoration-none">
                                    <i class="fas fa-chalkboard-teacher me-1"></i>
                                    Quản lý Nhân viên
                                </a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Chi tiết</li>
                        </ol>
                    </nav>
                    <h2 class="h3 mb-0">
                        <i class="fas fa-user-circle text-primary me-2"></i>
                        Chi tiết Nhân viên
                    </h2>
                </div>
                <div>
                    <a href="/HumanResources/User/ListHumanResources" class="btn btn-secondary me-2">
                        <i class="fas fa-arrow-left me-2"></i>
                        Quay lại
                    </a>
                    <a asp-page="./UpdateHumanResources" asp-route-id="@Model.HrStaff.UserId" class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i>
                        Chỉnh sửa
                    </a>
                </div>
            </div>

            @if (Model.HrStaff != null)
            {
                <!-- Main Information Card -->
                <div class="row">
                    <div class="col-md-4">
                        <!-- Profile Card -->
                        <div class="card mb-4">
                            <div class="card-header bg-primary text-white">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-user me-2"></i>
                                    Thông tin cá nhân
                                </h5>
                            </div>
                            <div class="card-body text-center">
                                <!-- Profile Image -->
                                <div class="mb-3">
                                    @if (!string.IsNullOrEmpty(Model.HrStaff.ProfileImageUrl))
                                    {
                                        <img src="@Model.HrStaff.ProfileImageUrl" alt="Avatar"
                                             class="rounded-circle border border-3 border-light shadow"
                                             width="120" height="120" style="object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-secondary rounded-circle d-inline-flex align-items-center justify-content-center border border-3 border-light shadow"
                                             style="width: 120px; height: 120px;">
                                            <i class="fas fa-user text-white fa-3x"></i>
                                        </div>
                                    }
                                </div>

                                <!-- Name -->
                                <h4 class="card-title text-primary mb-2">@Model.HrStaff.Fullname</h4>

                                <!-- Basic Info -->
                                <div class="row text-start">
                                    <div class="col-12 mb-2">
                                        <strong>ID:</strong>
                                        <span class="badge bg-info ms-2">@Model.HrStaff.UserId</span>
                                    </div>
                                    <div class="col-12 mb-2">
                                        <strong>Giới tính:</strong>
                                        <span class="ms-2">
                                            @if (Model.HrStaff.Gender == true)
                                            {
                                                <i class="fas fa-mars text-primary me-1"></i>
                                        
                                                <span>Nam</span>
                                            }
                                            else if (Model.HrStaff.Gender == false)
                                            {
                                                <i class="fas fa-venus text-danger me-1"></i>
                                        
                                                <span>Nữ</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Chưa xác định</span>
                                            }
                                        </span>
                                    </div>
                                    <div class="col-12 mb-2">
                                        <strong>Ngày sinh:</strong>
                                        <span class="ms-2">
                                            <i class="fas fa-birthday-cake text-warning me-1"></i>
                                            @Model.HrStaff.Dob.ToShortDateString()

                                        </span>
                                    </div>
                                    @* <div class="col-12 mb-2">
                                        <strong>Số học viên:</strong> 
                                        <span class="badge bg-@(Model.Instructor.StudentCount > 0 ? "success" : "secondary") ms-2">
                                            @Model.Instructor.StudentCount học viên
                                        </span>
                                    </div> *@
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-8">
                        <!-- Contact Information -->
                        <div class="card mb-4">
                            <div class="card-header bg-info text-white">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-address-book me-2"></i>
                                    Thông tin liên hệ
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">
                                            <i class="fas fa-envelope text-primary me-2"></i>
                                            Email
                                        </label>
                                        <div class="form-control-plaintext border rounded p-2 bg-light">
                                            @if (!string.IsNullOrEmpty(Model.HrStaff.Email))
                                            {
                                                <a href="mailto:@Model.HrStaff.Email" class="text-decoration-none">
                                                    @Model.HrStaff.Email
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Chưa có</span>
                                            }
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">
                                            <i class="fas fa-phone text-success me-2"></i>
                                            Số điện thoại
                                        </label>
                                        <div class="form-control-plaintext border rounded p-2 bg-light">
                                            @if (!string.IsNullOrEmpty(Model.HrStaff.Phone))
                                            {
                                                <a href="tel:@Model.HrStaff.Phone" class="text-decoration-none">
                                                    @Model.HrStaff.Phone
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Chưa có</span>
                                            }
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">
                                            <i class="fas fa-id-card text-warning me-2"></i>
                                            Số CCCD
                                        </label>
                                        <div class="form-control-plaintext border rounded p-2 bg-light">
                                            @if ((Model.HrStaff.Cccd != null))
                                            {
                                                <span class="badge bg-info fs-6">@Model.HrStaff.Cccd.CccdNumber</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Chưa có</span>
                                            }
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">
                                            <i class="fas fa-map-marker-alt text-danger me-2"></i>
                                            Địa chỉ
                                        </label>
                                        <div class="form-control-plaintext border rounded p-2 bg-light">
                                            @if (Model.HrStaff.Address != null)
                                            {
                                                @(string.IsNullOrEmpty(Model.HrStaff.Address.HouseNumber) ? "Số " + Model.HrStaff.Address.HouseNumber + ", " : "")
                                                @("Đường " + Model.HrStaff.Address.RoadName + ", ")
                                                @("Phường " + Model.HrStaff.Address.Ward.WardName + ", ")
                                                @("Quận " + Model.HrStaff.Address.Ward.Province.ProvinceName + ", ")
                                                @("Thành phố " + Model.HrStaff.Address.Ward.Province.City.CityName)
                                            }
                                            else
                                            {
                                                <span class="text-muted">Chưa có</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- CCCD Images -->
                <div class="card">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-images me-2"></i>
                            Hình ảnh CCCD
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (Model.HrStaff.Cccd != null)
                        {
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="text-center">
                                        <h6 class="fw-bold mb-3">
                                            <i class="fas fa-id-card me-2"></i>
                                            Mặt trước CCCD
                                        </h6>
                                        <div class="border rounded p-2 bg-light">
                                            <img src="@Model.HrStaff.Cccd.ImageMt" alt="Mặt trước CCCD"
                                                 class="img-fluid rounded shadow"
                                                 style="max-height: 250px; cursor: pointer;"
                                                 onclick="showImageModal('@Model.HrStaff.Cccd.ImageMt', 'Mặt trước CCCD')">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="text-center">
                                        <h6 class="fw-bold mb-3">
                                            <i class="fas fa-id-card me-2"></i>
                                            Mặt sau CCCD
                                        </h6>
                                        <div class="border rounded p-2 bg-light">
                                            <!-- Note: Trong DB chỉ có 1 ImageUrl, có thể cần tách thành 2 field riêng -->
                                            <img src="@Model.HrStaff.Cccd.ImageMs" alt="Mặt sau CCCD"
                                                 class="img-fluid rounded shadow"
                                                 style="max-height: 250px; cursor: pointer;"
                                                 onclick="showImageModal('@Model.HrStaff.Cccd.ImageMs', 'Mặt sau CCCD')">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="fas fa-image fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">Chưa có hình ảnh CCCD</h5>
                                <p class="text-muted">Hình ảnh CCCD chưa được tải lên hệ thống.</p>
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-danger text-center">
                    <i class="fas fa-exclamation-triangle fa-2x mb-3"></i>
                    <h4>Không tìm thấy thông tin nhân viên</h4>
                    <p>Vui lòng kiểm tra lại hoặc quay về danh sách nhân viên.</p>
                    <a href="/HumanResources/User/ManagerInstructor" class="btn btn-primary">
                        <i class="fas fa-arrow-left me-2"></i>
                        Quay lại danh sách
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Image Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imageModalLabel">Xem ảnh</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img id="modalImage" src="" alt="" class="img-fluid">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showImageModal(imageUrl, title) {
            document.getElementById('imageModalLabel').textContent = title;
            document.getElementById('modalImage').src = imageUrl;
            document.getElementById('modalImage').alt = title;
            new bootstrap.Modal(document.getElementById('imageModal')).show();
        }
    </script>
}

