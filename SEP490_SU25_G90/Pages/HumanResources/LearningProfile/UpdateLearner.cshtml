@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        let currentImageUrl = '';
        
        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            // CCCD number validation
            const cccdInput = document.getElementById('cccdNumber');
            if (cccdInput) {
                cccdInput.addEventListener('input', function(e) {
                    // Remove any non-digit characters
                    e.target.value = e.target.value.replace(/[^\d]/g, '');
                    
                    // Limit to 12 digits
                    if (e.target.value.length > 12) {
                        e.target.value = e.target.value.substring(0, 12);
                    }
                });

                cccdInput.addEventListener('keypress', function(e) {
                    // Only allow numbers and control keys
                    if (!/^\d$/.test(e.key) && !['Backspace', 'Delete', 'Tab', 'Escape', 'Enter', 'ArrowLeft', 'ArrowRight'].includes(e.key)) {
                        e.preventDefault();
                    }
                });
            }
            
            // Real-time image preview for all image URL inputs
            const imageUrlInputs = document.querySelectorAll('.image-url-input');
            imageUrlInputs.forEach(function(input) {
                // Add debounce for better performance
                let debounceTimer;
                
                input.addEventListener('input', function(e) {
                    clearTimeout(debounceTimer);
                    debounceTimer = setTimeout(function() {
                        updateImagePreview(input);
                    }, 500); // Wait 500ms after user stops typing
                });
                
                input.addEventListener('paste', function(e) {
                    // Handle paste event with slight delay
                    setTimeout(function() {
                        updateImagePreview(input);
                    }, 100);
                });
            });
            
            // Auto dismiss alerts after 5 seconds
            const alerts = document.querySelectorAll('.alert:not(.alert-permanent)');
            alerts.forEach(function(alert) {
                setTimeout(function() {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }, 5000);
            });
        });
        
        // Function to update image preview
        function updateImagePreview(input) {
            const url = input.value.trim();
            const previewTargetId = input.getAttribute('data-preview-target');
            const previewContainer = document.getElementById(previewTargetId);
            
            if (!previewContainer) return;
            
            // Clear existing preview
            previewContainer.innerHTML = '';
            
            if (!url) return;
            
            // Validate URL format
            try {
                new URL(url);
            } catch (e) {
                // Invalid URL, don't show preview
                return;
            }
            
            // Show loading state
            const loadingDiv = document.createElement('div');
            loadingDiv.className = 'text-center p-2';
            loadingDiv.innerHTML = `
                <div class="spinner-border spinner-border-sm text-primary" role="status">
                    <span class="visually-hidden">Đang tải...</span>
                </div>
                <small class="text-muted d-block mt-1">Đang tải ảnh...</small>
            `;
            previewContainer.appendChild(loadingDiv);
            
            // Create image element to test loading
            const img = new Image();
            
            img.onload = function() {
                // Remove loading state
                previewContainer.innerHTML = '';
                
                // Create preview image
                const previewImg = document.createElement('img');
                previewImg.src = url;
                previewImg.alt = getImageAltText(previewTargetId);
                previewImg.className = 'img-thumbnail preview-image';
                previewImg.style.cssText = 'max-width: 200px; max-height: 130px; cursor: pointer; transition: transform 0.2s ease;';
                previewImg.onclick = function() {
                    showImagePreview(url, getImageAltText(previewTargetId));
                };
                
                // Add hover effect
                previewImg.addEventListener('mouseenter', function() {
                    this.style.transform = 'scale(1.05)';
                });
                previewImg.addEventListener('mouseleave', function() {
                    this.style.transform = 'scale(1)';
                });
                
                previewContainer.appendChild(previewImg);
            };
            
            img.onerror = function() {
                // Remove loading state and show error
                previewContainer.innerHTML = `
                    <div class="alert alert-warning alert-sm p-2 mb-0">
                        <i class="fas fa-exclamation-triangle me-1"></i>
                        <small>Không thể tải ảnh. Vui lòng kiểm tra URL.</small>
                    </div>
                `;
            };
            
            // Start loading
            img.src = url;
        }
        
        // Helper function to get appropriate alt text
        function getImageAltText(previewTargetId) {
            switch (previewTargetId) {
                case 'cccdFrontPreview':
                    return 'Mặt trước CCCD';
                case 'cccdBackPreview':
                    return 'Mặt sau CCCD';
                case 'healthCertPreview':
                    return 'Giấy khám sức khỏe';
                default:
                    return 'Hình ảnh';
            }
        }
        
        // Image preview functionality
        function showImagePreview(imageUrl, title) {
            if (!imageUrl) return;
            
            currentImageUrl = imageUrl;
            document.getElementById('imagePreviewModalLabel').textContent = title;
            
            // Reset states
            document.getElementById('imageLoading').style.display = 'block';
            document.getElementById('previewImage').style.display = 'none';
            document.getElementById('imageError').style.display = 'none';
            
            // Create new image to test loading
            const img = new Image();
            img.onload = function() {
                document.getElementById('previewImage').src = imageUrl;
                document.getElementById('previewImage').alt = title;
                document.getElementById('imageLoading').style.display = 'none';
                document.getElementById('previewImage').style.display = 'block';
            };
            img.onerror = function() {
                document.getElementById('imageLoading').style.display = 'none';
                document.getElementById('imageError').style.display = 'block';
            };
            img.src = imageUrl;
            
            new bootstrap.Modal(document.getElementById('imagePreviewModal')).show();
        }
        
        function openImageInNewTab() {
            if (currentImageUrl) {
                window.open(currentImageUrl, '_blank');
            }
        }
        
        // Form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
        
        // Close modal on ESC key
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                const modal = bootstrap.Modal.getInstance(document.getElementById('imagePreviewModal'));
                if (modal) {
                    modal.hide();
                }
            }
        });
    </script>
} 