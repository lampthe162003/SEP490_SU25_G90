@page
@model SEP490_SU25_G90.Pages.HumanResources.LearningProfile.UpdateLearnerModel
@{
    ViewData["Title"] = "Cập nhật thông tin học viên";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="/Admins/LearningProfile/ListLearningProfile" class="text-decoration-none">
                                    <i class="fas fa-graduation-cap me-1"></i>
                                    Quản lý Học viên
                                </a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Cập nhật thông tin</li>
                        </ol>
                    </nav>
                    <h2 class="h3 mb-0">
                        <i class="fas fa-user-edit text-primary me-2"></i>
                        Cập nhật thông tin học viên
                    </h2>
                </div>
            </div>

            <!-- Alert Messages -->
            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert alert-@(Model.MessageType == "success" ? "success" : "danger") alert-dismissible fade show" role="alert">
                    <i class="fas fa-@(Model.MessageType == "success" ? "check-circle" : "exclamation-triangle") me-2"></i>
                    @Model.Message
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Update Form -->
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-edit me-2"></i>
                        Thông tin học viên
                    </h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-page-handler="Post">
                        <input type="hidden" asp-for="UpdateRequest.UserId" />
                        
                        <div class="row">
                            <!-- Left Column - Basic Information -->
                            <div class="col-md-12 mb-4">
                                <div class="card">
                                    <div class="card-header bg-info text-white">
                                        <h6 class="card-title mb-0">
                                            <i class="fas fa-user me-2"></i>
                                            Thông tin cá nhân
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-4 mb-3">
                                                <label asp-for="UpdateRequest.FirstName" class="form-label">
                                                    <i class="fas fa-user me-1"></i>
                                                    Họ <span class="text-danger">*</span>
                                                </label>
                                                <input asp-for="UpdateRequest.FirstName" class="form-control" />
                                                <span asp-validation-for="UpdateRequest.FirstName" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-4 mb-3">
                                                <label asp-for="UpdateRequest.MiddleName" class="form-label">
                                                    <i class="fas fa-user me-1"></i>
                                                    Tên đệm
                                                </label>
                                                <input asp-for="UpdateRequest.MiddleName" class="form-control" />
                                                <span asp-validation-for="UpdateRequest.MiddleName" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-4 mb-3">
                                                <label asp-for="UpdateRequest.LastName" class="form-label">
                                                    <i class="fas fa-user me-1"></i>
                                                    Tên <span class="text-danger">*</span>
                                                </label>
                                                <input asp-for="UpdateRequest.LastName" class="form-control" />
                                                <span asp-validation-for="UpdateRequest.LastName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="UpdateRequest.Email" class="form-label">
                                                    <i class="fas fa-envelope me-1"></i>
                                                    Email <span class="text-danger">*</span>
                                                </label>
                                                <input asp-for="UpdateRequest.Email" class="form-control" type="email" />
                                                <span asp-validation-for="UpdateRequest.Email" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="UpdateRequest.Phone" class="form-label">
                                                    <i class="fas fa-phone me-1"></i>
                                                    Số điện thoại
                                                </label>
                                                <input asp-for="UpdateRequest.Phone" class="form-control" type="tel" />
                                                <span asp-validation-for="UpdateRequest.Phone" class="text-danger"></span>
                                            </div>
                                        </div>
                                        
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="UpdateRequest.Dob" class="form-label">
                                                    <i class="fas fa-calendar me-1"></i>
                                                    Ngày sinh
                                                </label>
                                                <input asp-for="UpdateRequest.Dob" class="form-control" type="date" />
                                                <span asp-validation-for="UpdateRequest.Dob" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="UpdateRequest.Gender" class="form-label">
                                                    <i class="fas fa-venus-mars me-1"></i>
                                                    Giới tính
                                                </label>
                                                <select asp-for="UpdateRequest.Gender" class="form-select">
                                                    <option value="">-- Chọn giới tính --</option>
                                                    <option value="true">Nam</option>
                                                    <option value="false">Nữ</option>
                                                </select>
                                                <span asp-validation-for="UpdateRequest.Gender" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        
                        <!-- Documents Section -->
                        <div class="row">
                            <!-- CCCD Information -->
                            <div class="col-md-6">
                                <div class="card mb-4">
                                    <div class="card-header bg-warning text-dark">
                                        <h6 class="card-title mb-0">
                                            <i class="fas fa-id-card me-2"></i>
                                            Thông tin CCCD
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <label asp-for="UpdateRequest.CccdNumber" class="form-label">
                                                <i class="fas fa-id-card me-1"></i>
                                                Số CCCD
                                            </label>
                                            <input asp-for="UpdateRequest.CccdNumber" class="form-control" 
                                                   id="cccdNumber" maxlength="12" placeholder="Nhập 12 chữ số CCCD" />
                                            <span asp-validation-for="UpdateRequest.CccdNumber" class="text-danger"></span>
                                            <div class="form-text">
                                                <i class="fas fa-info-circle me-1"></i>
                                                Chỉ nhập số, tối đa 12 chữ số
                                            </div>
                                        </div>

                                        <div class="mb-3">
                                            <label asp-for="UpdateRequest.CccdImageFront" class="form-label">
                                                <i class="fas fa-image me-1"></i>
                                                Ảnh mặt trước CCCD
                                            </label>
                                            <input asp-for="UpdateRequest.CccdImageFront" class="form-control image-url-input" 
                                                   type="url" placeholder="Dán URL ảnh mặt trước"
                                                   data-preview-target="cccdFrontPreview" />
                                            <span asp-validation-for="UpdateRequest.CccdImageFront" class="text-danger"></span>
                                            
                                            <!-- Preview Container Front -->
                                            <div class="mt-2 preview-container" id="cccdFrontPreview">
                                                @if (!string.IsNullOrEmpty(Model.UpdateRequest.CccdImageFront))
                                                {
                                                    <img src="@Model.UpdateRequest.CccdImageFront" 
                                                         alt="Mặt trước CCCD" 
                                                         class="img-thumbnail preview-image" 
                                                         style="max-width: 200px; max-height: 130px; cursor: pointer;"
                                                         onclick="showImagePreview('@Model.UpdateRequest.CccdImageFront', 'Mặt trước CCCD')" />
                                                }
                                            </div>
                                        </div>

                                        <div class="mb-3">
                                            <label asp-for="UpdateRequest.CccdImageBack" class="form-label">
                                                <i class="fas fa-image me-1"></i>
                                                Ảnh mặt sau CCCD
                                            </label>
                                            <input asp-for="UpdateRequest.CccdImageBack" class="form-control image-url-input" 
                                                   type="url" placeholder="Dán URL ảnh mặt sau"
                                                   data-preview-target="cccdBackPreview" />
                                            <span asp-validation-for="UpdateRequest.CccdImageBack" class="text-danger"></span>
                                            
                                            <!-- Preview Container Back -->
                                            <div class="mt-2 preview-container" id="cccdBackPreview">
                                                @if (!string.IsNullOrEmpty(Model.UpdateRequest.CccdImageBack))
                                                {
                                                    <img src="@Model.UpdateRequest.CccdImageBack" 
                                                         alt="Mặt sau CCCD" 
                                                         class="img-thumbnail preview-image" 
                                                         style="max-width: 200px; max-height: 130px; cursor: pointer;"
                                                         onclick="showImagePreview('@Model.UpdateRequest.CccdImageBack', 'Mặt sau CCCD')" />
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Health Certificate Information -->
                            <div class="col-md-6">
                                <div class="card mb-4">
                                    <div class="card-header bg-success text-white">
                                        <h6 class="card-title mb-0">
                                            <i class="fas fa-file-medical me-2"></i>
                                            Giấy khám sức khỏe
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <label asp-for="UpdateRequest.HealthCertificateImageUrl" class="form-label">
                                                <i class="fas fa-image me-1"></i>
                                                Ảnh giấy khám sức khỏe
                                            </label>
                                            <input asp-for="UpdateRequest.HealthCertificateImageUrl" class="form-control image-url-input" 
                                                   type="url" placeholder="Dán URL ảnh giấy khám sức khỏe"
                                                   data-preview-target="healthCertPreview" />
                                            <span asp-validation-for="UpdateRequest.HealthCertificateImageUrl" class="text-danger"></span>
                                            <div class="form-text">
                                                <i class="fas fa-info-circle me-1"></i>
                                                Giấy khám sức khỏe có hiệu lực cho việc học lái xe
                                            </div>
                                            
                                            <!-- Preview Container Health Certificate -->
                                            <div class="mt-2 preview-container" id="healthCertPreview">
                                                @if (!string.IsNullOrEmpty(Model.UpdateRequest.HealthCertificateImageUrl))
                                                {
                                                    <img src="@Model.UpdateRequest.HealthCertificateImageUrl" 
                                                         alt="Giấy khám sức khỏe" 
                                                         class="img-thumbnail preview-image" 
                                                         style="max-width: 200px; max-height: 130px; cursor: pointer;"
                                                         onclick="showImagePreview('@Model.UpdateRequest.HealthCertificateImageUrl', 'Giấy khám sức khỏe')" />
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="card-footer bg-light">
                            <div class="d-flex justify-content-between">
                                <a href="/Admins/LearningProfile/ListLearningProfile" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>
                                    Quay lại
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>
                                    Cập nhật thông tin
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Image Preview Modal -->
<div class="modal fade" id="imagePreviewModal" tabindex="-1" aria-labelledby="imagePreviewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imagePreviewModalLabel">Xem ảnh</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <div id="imageLoading" class="text-center mb-3">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Đang tải...</span>
                    </div>
                    <p class="text-muted mt-2">Đang tải hình ảnh...</p>
                </div>
                <img id="previewImage" src="" alt="" class="img-fluid" style="display: none;">
                <div id="imageError" class="alert alert-danger" style="display: none;">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Không thể tải hình ảnh. Vui lòng kiểm tra lại URL.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="openImageInNewTab()">
                    <i class="fas fa-external-link-alt me-2"></i>
                    Mở trong tab mới
                </button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>
                    Đóng
                </button>
            </div>
        </div>
    </div>
</div>

