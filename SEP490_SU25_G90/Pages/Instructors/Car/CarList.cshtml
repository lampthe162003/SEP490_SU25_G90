            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-list me-2"></i>
                        Danh sách xe đã đăng ký mượn
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.RentedCars.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col">Loại Xe</th>
                                        <th scope="col">Mẫu Xe</th>
                                        <th scope="col">Biển Số Xe</th>
                                        <th scope="col">Ngày Mượn</th>
                                        <th scope="col">Slot mượn</th>
                                        <th scope="col">Trạng thái</th>
                                        <th scope="col">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.RentedCars)
                                    {
                                        <tr>
                                            <td>@item.Car.CarMake</td>
                                            <td>@item.Car.CarModel</td>
                                            <td>@item.Car.LicensePlate</td>
                                            <td>@item.ScheduleDate</td>
                                            <td>@item.Slot.StartTime - @item.Slot.EndTime</td>
                                            <td>@item.CarStatusNavigation?.StatusName</td>
                                            <td>
                                                <button class="btn btn-outline-primary" 
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#editCarRentingStatusModal"
                                                        data-assignment-id="@item.AssignmentId"
                                                        data-current-status="@item.CarStatus">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <span>Không có xe nào trong hệ thống</span>
                    }
                </div>
            </div>

            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-list me-2"></i>
                        Danh sách xe
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.Cars.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col">Loại Xe</th>
                                        <th scope="col">Mẫu Xe</th>
                                        <th scope="col">Biển Số Xe</th>
                                        <th scope="col">Chi tiết</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Cars)
                                    {
                                        <tr>
                                            <td>@item.CarMake</td>
                                            <td>@item.CarModel</td>
                                            <td>@item.LicensePlate</td>
                                            <td>
                                                <a class="btn btn-outline-primary" asp-page="./CarScheduleDetails" asp-route-id="@item.CarId">
                                                    <i class="fa-solid fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <span>Không có xe nào trong hệ thống</span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="editCarRentingStatusModal" tabindex="-1" aria-labelledby="editCarRentingStatusModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-page-handler="UpdateCarStatus">
                <div class="modal-header">
                    <h5 class="modal-title" id="rentConfirmModalLabel">Chỉnh sửa trạng thái mượn xe</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" asp-for="AssignmentId" id="editCarId" />
                    <select asp-for="CarStatusEdit" asp-items="Model.CarStatusOptions" class="form-control">
                    </select>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Huỷ</button>
                    <button type="submit" class="btn btn-primary">Đồng ý</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var editModal = document.getElementById('editCarRentingStatusModal');

            editModal.addEventListener('show.bs.modal', function(event) {
                var button = event.relatedTarget;
                var assignmentId = button.getAttribute('data-assignment-id');
                var currentStatus = button.getAttribute('data-current-status');

                // Set the hidden car ID field
                document.getElementById('editCarId').value = assignmentId;

                // Set the dropdown to the current status
                var statusSelect = document.querySelector('#editCarRentingStatusModal select');
                statusSelect.value = currentStatus;
            });
        });
    </script>
}
