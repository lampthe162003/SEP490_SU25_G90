            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-list me-2"></i>
                        Danh sách xe
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.Cars.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col">Loại Xe</th>
                                        <th scope="col">Mẫu Xe</th>
                                        <th scope="col">Biển Số Xe</th>
                                        <th scope="col" class="w-50">Tình trạng mượn xe</th>
                                        <th scope="col">Chi tiết</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Cars)
                                    {
                                        <tr>
                                            <td>@item.CarMake</td>
                                            <td>@item.CarModel</td>
                                            <td>@item.LicensePlate</td>
                                            <td class="text-center">
                                                <div class="d-flex justify-content-center gap-2 flex-wrap">
                                                    @for (int i = 1; i <= 4; i++)
                                                    {
                                                        @* var isRented = car.RentedTimeSpans.Contains(i); // Assume RentedTimeSpans is a List<int> *@
                                                        @* var btnClass = isRented ? "btn btn-sm btn-danger" : "btn btn-sm btn-outline-primary"; *@

                                                        @* <button type="button" class="@btnClass" style="min-width: 40px;">@i</button> *@
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                <a class="btn btn-outline-primary" asp-page="./CarScheduleDetails" asp-route-id="@item.CarId">
                                                    <i class="fa-solid fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <span>Không có xe nào trong hệ thống</span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
