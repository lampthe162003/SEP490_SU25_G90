@page "/Instructors/LearnApplication/List"
@model SEP490_SU25_G90.Pages.Instructors.LearnApplication.ListLearningApplicationsModel

@{
    ViewData["Title"] = "Danh sách hồ sơ học viên";
    Layout = "~/Pages/Shared/_InstructorLayout.cshtml";
    int stt = 1;
}

<h2 class="mb-4"><i class="fa fa-list-alt me-2"></i>Danh sách hồ sơ học viên</h2>

<form method="get" class="row g-3 align-items-end bg-light p-3 rounded shadow-sm mb-4">
    <div class="col-md-4">
        <label class="form-label fw-semibold">Tìm kiếm</label>
        <div class="input-group">
            <span class="input-group-text"><i class="fa fa-search"></i></span>
            <input type="text" name="SearchString" value="@Model.SearchString" class="form-control" placeholder="Tên hoặc CCCD..." />
        </div>
    </div>
    <div class="col-md-3">
        <label class="form-label fw-semibold">Trạng thái</label>
        <select name="StatusFilter" class="form-select" onchange="this.form.submit()">
            <option value="">-- Tất cả --</option>
            <option value="1" selected="@(Model.StatusFilter == 1)">Đang học</option>
            <option value="2" selected="@(Model.StatusFilter == 2)">Hoàn thành</option>
            <option value="3" selected="@(Model.StatusFilter == 3)">Đã huỷ</option>
        </select>
    </div>
    <div class="col-md-2">
        <label class="form-label invisible">Lọc</label>
        <button type="submit" class="btn btn-primary w-100">
            <i class="fa fa-filter me-1"></i>Lọc
        </button>
    </div>
</form>


<div class="table-responsive">
    <table class="table table-hover align-middle table-bordered rounded shadow-sm">
        <thead class="table-primary">
            <tr class="text-center">
                <th>#</th>
                <th>Tên học viên</th>
                <th>CCCD</th>
                <th>Loại bằng</th>
                <th>Ngày đăng ký</th>
                <th>Trạng thái</th>
                <th>Chi tiết</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.LearningApplications.Any())
            {
                @foreach (var item in Model.LearningApplications)
                {
                    <tr class="text-center">
                        <td>@stt</td>
                        <td>@item.LearnerFullName</td>
                        <td>@item.LearnerCccdNumber</td>
                        <td>@item.LicenceTypeName</td>
                        <td>@item.SubmittedAt?.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (item.LearningStatus == 1)
                            {
                                <span class="badge bg-warning text-dark">Đang học</span>
                            }
                            else if (item.LearningStatus == 2)
                            {
                                <span class="badge bg-success">Hoàn thành</span>
                            }
                            else if (item.LearningStatus == 3)
                            {
                                <span class="badge bg-danger">Đã huỷ</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Không xác định</span>
                            }
                        </td>
                        <td>
                            <a asp-page="LearningApplicationDetail" asp-route-id="@item.LearningId" class="btn btn-outline-primary btn-sm">
                                <i class="fa fa-eye"></i> Xem
                            </a>
                        </td>
                    </tr>
                    stt++;
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center text-muted">Không có hồ sơ học nào.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation" class="mt-3">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-route-pageNumber="@(Model.CurrentPage - 1)"
                   asp-route-SearchString="@Model.SearchString"
                   asp-route-StatusFilter="@Model.StatusFilter">«</a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                    <a class="page-link" asp-route-pageNumber="@i"
                       asp-route-SearchString="@Model.SearchString"
                       asp-route-StatusFilter="@Model.StatusFilter">@i</a>
                </li>
            }
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-route-pageNumber="@(Model.CurrentPage + 1)"
                   asp-route-SearchString="@Model.SearchString"
                   asp-route-StatusFilter="@Model.StatusFilter">»</a>
            </li>
        </ul>
    </nav>
}
