@page "/AcademicAffairs/LearningApplications/Detail/{id:int}"
@model SEP490_SU25_G90.Pages.AcademicAffairs.LearningApplications.LearningApplicationDetailModel

@{
    ViewData["Title"] = "Thông tin chi tiết hồ sơ học";
    Layout = "~/Pages/Shared/_AcademicAffairsLayout.cshtml";
    var app = Model.LearningApplication;
}

<h2 class="mb-4">Thông tin chi tiết hồ sơ học</h2>
@if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
{
    <div class="alert alert-info alert-dismissible fade show mt-2" role="alert">
        @Model.StatusMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <!-- Thông tin học viên -->
    <div class="col-md-7">
        <div class="card mb-3 shadow-sm">
            <div class="card-header bg-info text-white">
                <strong>Thông tin học viên</strong>
            </div>
            <div class="card-body">
                <table class="table table-borderless mb-0">
                    <tr><td><b>Tên học viên:</b> @app?.LearnerFullName</td></tr>
                    <tr><td><b>CCCD:</b> @app?.LearnerCccdNumber</td></tr>
                    <tr><td><b>Ngày sinh:</b> @app?.LearnerDob?.ToString("dd/MM/yyyy")</td></tr>
                    <tr><td><b>Số điện thoại:</b> @app?.LearnerPhone</td></tr>
                    <tr><td><b>Email:</b> @app?.LearnerEmail</td></tr>
                    <tr><td><b>Loại bằng đăng ký:</b> @app?.LicenceTypeName</td></tr>
                    <tr><td><b>Giảng viên phụ trách:</b> @app?.InstructorFullName</td></tr>
                    <tr><td><b>Ngày đăng ký học:</b> @app?.SubmittedAt?.ToString("dd/MM/yyyy")</td></tr>
                    <tr>
                        <td>
                            <b>Giờ thực hành:</b>
                            <span class="@(app.TotalPracticalHours >= app.RequiredPracticalHours ? "text-success fw-bold" : "text-danger fw-bold")">
                                @app.TotalPracticalHours / @app.RequiredPracticalHours giờ
                            </span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <b>Km thực hành:</b>
                            <span class="@(app.TotalPracticalKm >= app.RequiredPracticalKm ? "text-success fw-bold" : "text-danger fw-bold")">
                                @app.TotalPracticalKm / @app.RequiredPracticalKm km
                            </span>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <b>Đủ điều kiện thi tốt nghiệp:</b>
                            <span class="@(app.TotalPracticalHours >= app.RequiredPracticalHours && app.TotalPracticalKm >= app.RequiredPracticalKm ? "text-success fw-bold" : "text-danger fw-bold")">
                                @(app.TotalPracticalHours >= app.RequiredPracticalHours && app.TotalPracticalKm >= app.RequiredPracticalKm ? "Đạt" : "Chưa đạt")
                            </span>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <b>Trạng thái hồ sơ:</b>
                            <span class="badge bg-secondary">@app?.LearningStatusName</span>
                            <button type="button" class="btn btn-sm btn-outline-primary ms-2" onclick="toggleStatusForm()">
                                <i class="fa fa-edit"></i> Sửa
                            </button>
                            <form id="statusForm" method="post" asp-page-handler="UpdateStatus" class="mt-2 d-none">
                                <input type="hidden" asp-for="Id" value="@app?.LearningId" />
                                <div class="row">
                                    <div class="col-md-6">
                                        <select asp-for="NewStatus" class="form-select form-select-sm">
                                            <option value="1">Đang học</option>
                                            <option value="2">Bảo lưu</option>
                                            <option value="3">Học lại</option>
                                            <option value="4">Hoàn thành</option>
                                        </select>
                                    </div>
                                    <div class="col-md-4">
                                        <button type="submit" class="btn btn-sm btn-success">
                                            <i class="fa fa-save"></i> Cập nhật trạng thái
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    <!-- Điểm thi & tài liệu -->
    <div class="col-md-5">
        <div class="card mb-3 shadow-sm">
            <div class="card-header bg-primary text-white">
                <strong>Điểm thi tốt nghiệp</strong>
            </div>
            <div class="card-body">
                <table class="table table-bordered text-center">
                    <thead class="table-light">
                        <tr>
                            <th>Phần thi</th>
                            <th>Điểm đạt</th>
                            <th>Điểm học viên</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Lý thuyết</td>
                            <td>@(app?.TheoryPassScore)/@(app?.TheoryMaxScore)</td>
                            <td>@app?.TheoryScore</td>
                            <td>
                                <span class="@(app?.TheoryScore >= app?.TheoryPassScore ? "text-success fw-bold" : "text-danger fw-bold")">
                                    @(app?.TheoryScore >= app?.TheoryPassScore ? "Đạt" : "Chưa đạt")
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td>Mô phỏng</td>
                            <td>@(app?.SimulationPassScore)/@(app?.SimulationMaxScore)</td>
                            <td>@app?.SimulationScore</td>
                            <td>
                                <span class="@(app?.SimulationScore >= app?.SimulationPassScore ? "text-success fw-bold" : "text-danger fw-bold")">
                                    @(app?.SimulationScore >= app?.SimulationPassScore ? "Đạt" : "Chưa đạt")
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td>Đường trường</td>
                            <td>@(app?.ObstaclePassScore)/@(app?.ObstacleMaxScore)</td>
                            <td>@app?.ObstacleScore</td>
                            <td>
                                <span class="@(app?.ObstacleScore >= app?.ObstaclePassScore ? "text-success fw-bold" : "text-danger fw-bold")">
                                    @(app?.ObstacleScore >= app?.ObstaclePassScore ? "Đạt" : "Chưa đạt")
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td>Sa hình</td>
                            <td>@(app?.PracticalPassScore)/@(app?.PracticalMaxScore)</td>
                            <td>@app?.PracticalScore</td>
                            <td>
                                <span class="@(app?.PracticalScore >= app?.PracticalPassScore ? "text-success fw-bold" : "text-danger fw-bold")">
                                    @(app?.PracticalScore >= app?.PracticalPassScore ? "Đạt" : "Chưa đạt")
                                </span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-secondary text-white">
                <strong>Tài liệu đính kèm</strong>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <strong>Giấy khám sức khỏe:</strong>
                        @if (!string.IsNullOrWhiteSpace(app?.LearnerHealthCertImageUrl))
                        {
                            <span class="text-success fw-bold">Đã nộp</span>
                            <div class="mt-2">
                                <img src="@app.LearnerHealthCertImageUrl" alt="Giấy khám sức khỏe" 
                                     class="img-fluid rounded" style="max-height: 150px; cursor: pointer;" 
                                     onclick="openImageModal('@app.LearnerHealthCertImageUrl', 'Giấy khám sức khỏe')" />
                            </div>
                        }
                        else
                        {
                            <span class="text-muted">Chưa có</span>
                        }
                    </li>
                    <li class="list-group-item">
                        <strong>CCCD:</strong>
                        @if (!string.IsNullOrWhiteSpace(app?.LearnerCccdImageUrl))
                        {
                            <span class="text-success fw-bold">Đã nộp</span>
                            var cccdImages = app.LearnerCccdImageUrl.Split('|');
                            var frontImage = cccdImages.Length > 0 ? cccdImages[0] : "";
                            var backImage = cccdImages.Length > 1 ? cccdImages[1] : "";
                            <div class="mt-2">
                                @if (!string.IsNullOrWhiteSpace(frontImage))
                                {
                                    <div class="mb-2">
                                        <small class="text-muted">Mặt trước:</small>
                                        <img src="@frontImage" alt="CCCD mặt trước"
                                             class="img-fluid rounded" style="max-height: 100px; cursor: pointer;"
                                             onclick="openImageModal('@frontImage', 'CCCD mặt trước')" />
                                    </div>
                                }
                                @if (!string.IsNullOrWhiteSpace(backImage))
                                {
                                    <div>
                                        <small class="text-muted">Mặt sau:</small>
                                        <img src="@backImage" alt="CCCD mặt sau"
                                             class="img-fluid rounded" style="max-height: 100px; cursor: pointer;"
                                             onclick="openImageModal('@backImage', 'CCCD mặt sau')" />
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <span class="text-muted">Chưa có</span>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-page="./ListLearningApplication" class="btn btn-outline-secondary">
        <i class="fa fa-arrow-left"></i> Quay lại
    </a>
</div>

<!-- Modal hiển thị ảnh -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imageModalLabel">Xem ảnh</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img id="modalImage" src="" alt="" class="img-fluid" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleStatusForm() {
            document.getElementById('statusForm').classList.toggle('d-none');
        }

        function openImageModal(imageSrc, title) {
            document.getElementById('modalImage').src = imageSrc;
            document.getElementById('modalImage').alt = title;
            document.getElementById('imageModalLabel').textContent = title;
            var modal = new bootstrap.Modal(document.getElementById('imageModal'));
            modal.show();
        }
    </script>
}
