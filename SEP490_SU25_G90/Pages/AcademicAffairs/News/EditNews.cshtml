@page
@model SEP490_SU25_G90.Pages.AcademicAffairs.News.EditNewsModel
@{
    ViewData["Title"] = "Chỉnh sửa tin tức";
    Layout = "_AcademicAffairsLayout";
}

<h2>Chỉnh sửa Tin Tức</h2>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Input.NewsId" />
    <input type="hidden" asp-for="Input.OldImagePath" />

    <div class="mb-3">
        <label class="form-label">Tiêu đề</label>
        <textarea asp-for="Input.Title" class="form-control ckeditor"></textarea>
        <span asp-validation-for="Input.Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Nội dung</label>
        <textarea asp-for="Input.NewsContent" class="form-control ckeditor"></textarea>
        <span asp-validation-for="Input.NewsContent" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Ảnh</label>
        <input type="file" asp-for="Input.Image" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.Input.OldImagePath))
        {
            <div class="mt-2">
                <img src="@Model.Input.OldImagePath" width="200" />
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.ckeditor.com/4.16.2/standard/ckeditor.js"></script>
    <script>CKEDITOR.replaceAll('ckeditor');</script>
}