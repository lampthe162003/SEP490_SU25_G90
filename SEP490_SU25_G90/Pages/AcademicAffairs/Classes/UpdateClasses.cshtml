@page "{id}"
@model SEP490_SU25_G90.Pages.AcademicAffairs.Classes.UpdateClassesModel
@{
    ViewData["Title"] = "Cập nhật lớp học";
    Layout = "~/Pages/Shared/_AcademicAffairsLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0"><i class="fas fa-edit me-2"></i> Cập nhật lớp học</h2>
        <a class="btn btn-secondary" href="/AcademicAffairs/Classes/ClassDetails/@Model.Id">
            <i class="fas fa-arrow-left me-2"></i>Quay lại chi tiết
        </a>
    </div>

    @if (TempData["SuccessMessage"] is string msg)
    {
        <div class="alert alert-success">@msg</div>
    }

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
    }

    <div class="card">
        <div class="card-body">
            <form method="post">
                <div class="mb-3 row">
                    <label class="col-sm-2 col-form-label">Tên lớp học:</label>
                    <div class="col-sm-6">
                        <input asp-for="ClassName" class="form-control" readonly />
                        <span asp-validation-for="ClassName" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label class="col-sm-2 col-form-label">Giáo viên:</label>
                    <div class="col-sm-6">
                        <select asp-for="InstructorId" class="form-select" asp-items="Model.Instructors">
                            <option value="">-- Chọn giáo viên --</option>
                        </select>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                </div>
            </form>
        </div>
    </div>
</div>
