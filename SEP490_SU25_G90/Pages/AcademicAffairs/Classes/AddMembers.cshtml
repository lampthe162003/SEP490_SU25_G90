@page
@model SEP490_SU25_G90.Pages.AcademicAffairs.Classes.AddMembersModel
@{
    ViewData["Title"] = "Thêm học viên";
    Layout = "~/Pages/Shared/_AcademicAffairsLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0"><i class="fas fa-user-plus me-2"></i> Thêm học viên vào lớp</h2>
        <a class="btn btn-secondary" href="/AcademicAffairs/Classes/ClassDetails/@Model.ClassId">
            <i class="fas fa-arrow-left me-2"></i>Quay lại lớp
        </a>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
    }

    <div class="card">
        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="ClassId" />
                <div class="table-responsive">
                    <table class="table table-bordered align-middle">
                        <thead class="table-info">
                            <tr>
                                <th style="width:70px">Stt</th>
                                <th style="width:80px">Chọn</th>
                                <th style="width:120px">Hình ảnh</th>
                                <th>CCCD</th>
                                <th>Tên học viên</th>
                                <th>Tình trạng</th>
                            </tr>
                        </thead>
                        <tbody>
                        @if (Model.Candidates.Count == 0)
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted">Không có học viên chờ xếp lớp</td>
                            </tr>
                        }
                        else
                        {
                            var index = 1;
                            foreach (var item in Model.Candidates)
                            {
                                <tr>
                                    <td>@index</td>
                                    <td class="text-center">
                                        <input type="checkbox" class="form-check-input" name="SelectedLearnerIds" value="@item.LearningId" />
                                    </td>
                                    <td>
                                        <img src="@item.ProfileImageUrl" alt="avatar" class="rounded" style="width:48px;height:48px;object-fit:cover"/>
                                    </td>
                                    <td>@item.Cccd</td>
                                    <td>@item.FullName</td>
                                    <td>@item.Status</td>
                                </tr>
                                index++;
                            }
                        }
                        </tbody>
                    </table>
                </div>

                <div class="d-flex justify-content-end gap-3 mt-3">
                    <a class="btn btn-outline-secondary" href="/AcademicAffairs/Classes/ClassDetails/@Model.ClassId">Hủy</a>
                    <button type="submit" class="btn btn-primary">Thêm học viên</button>
                </div>
            </form>
        </div>
    </div>
</div>
