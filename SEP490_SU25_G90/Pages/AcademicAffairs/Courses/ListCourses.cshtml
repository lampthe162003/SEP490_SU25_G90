@page
@model SEP490_SU25_G90.Pages.AcademicAffairs.Courses.ListCoursesModel
@{
    ViewData["Title"] = "Danh sách khóa học";
    Layout = "~/Pages/Shared/_AcademicAffairsLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-list-alt me-2"></i>
            Danh sách khóa học
        </h2>
        <a href="/AcademicAffairs/Courses/CreateCourse" class="btn btn-success">
            <i class="fas fa-plus me-2"></i>
            Tạo khóa học
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Tìm theo tên khóa học</label>
                        <input type="text" class="form-control"
                               name="SearchRequest.CourseName"
                               value="@Model.SearchRequest.CourseName"
                               placeholder="Nhập tên khóa học..." />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Loại bằng</label>
                        <select class="form-select" name="SearchRequest.LicenceTypeId">
                            @foreach (var item in Model.LicenceTypes)
                            {
                                <option value="@item.Value" selected="@(item.Value == Model.SearchRequest.LicenceTypeId?.ToString())">@item.Text</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Trạng thái</label>
                        <select class="form-select" name="SearchRequest.Status">
                            @foreach (var item in Model.StatusOptions)
                            {
                                <option value="@item.Value" selected="@(item.Value == Model.SearchRequest.Status)">@item.Text</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="row g-3 mt-2">
                    <div class="col-md-3">
                        <label class="form-label">Bắt đầu</label>
                        <input type="month" class="form-control"
                               name="SearchRequest.StartDate"
                               value="@(Model.SearchRequest.StartDate?.ToString("yyyy-MM"))" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Kết thúc</label>
                        <input type="month" class="form-control"
                               name="SearchRequest.EndDate"
                               value="@(Model.SearchRequest.EndDate?.ToString("yyyy-MM"))" />
                    </div>
                    <div class="col-md-6 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2" onclick="document.querySelector('input[name=\"SearchRequest.PageNumber\"]').value = 1;">
                            <i class="fas fa-search me-2"></i>
                            Tìm kiếm
                        </button>
                        <a href="@Model.CreateResetUrl()" class="btn btn-secondary">
                            <i class="fas fa-undo me-2"></i>
                            Đặt lại
                        </a>
                    </div>
                </div>
                <input type="hidden" name="SearchRequest.PageNumber" value="@Model.SearchRequest.PageNumber" />
                <input type="hidden" name="SearchRequest.PageSize" value="@Model.SearchRequest.PageSize" />
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            @if (TempData["ErrorMessage"] is string err)
            {
                <div class="alert alert-danger">@err</div>
            }
            @if (TempData["SuccessMessage"] is string ok)
            {
                <div class="alert alert-success">@ok</div>
            }
            @if (Model.Courses.Data.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-info">
                            <tr>
                                <th style="width:5%">Stt</th>
                                <th style="width:18%">Tên khóa học</th>
                                <th style="width:8%">Loại bằng</th>
                                <th style="width:12%">Bắt đầu</th>
                                <th style="width:12%">Kết thúc</th>
                                <th style="width:14%">Trạng thái</th>
                                <th style="width:10%">Tổng Số lớp</th>
                                <th style="width:10%">Số học viên</th>
                                <th style="width:11%">Chi Tiết</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ var startIndex = (Model.SearchRequest.PageNumber - 1) * Model.SearchRequest.PageSize; }
                            @foreach (var item in Model.Courses.Data.Select((value, index) => new { value, index }))
                            {
                                <tr>
                                    <td>@(startIndex + item.index + 1)</td>
                                    <td class="fw-bold">@item.value.CourseName</td>
                                    <td><span class="badge bg-info">@item.value.LicenceCode</span></td>
                                    <td>@item.value.StartDate?.ToString("dd/MM/yyyy")</td>
                                    <td>@item.value.EndDate?.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @{ var badge = item.value.Status switch { "Chưa bắt đầu" => "bg-warning text-dark", "Đang diễn ra" => "bg-success", "Đã kết thúc" => "bg-secondary", _ => "bg-light text-dark" }; }
                                        <span class="badge @badge">@item.value.Status</span>
                                    </td>
                                    <td class="text-center"><span class="badge bg-primary">@item.value.TotalClasses</span></td>
                                    <td class="text-center"><span class="badge bg-primary">@item.value.TotalStudents</span></td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a class="btn btn-sm btn-outline-primary" title="Xem chi tiết" href="/AcademicAffairs/Courses/CourseDetails/@item.value.CourseId"><i class="fas fa-eye"></i></a>
                                            <a class="btn btn-sm btn-outline-secondary" title="Chỉnh sửa" href="/AcademicAffairs/Courses/EditCourse/@item.value.CourseId"
                                               onclick="return confirm('Chỉ cập nhật được khóa học chưa bắt đầu. Tiếp tục?');"><i class="fas fa-pen"></i></a>
                                            <form method="post" asp-page-handler="Delete" class="d-inline" onsubmit="return confirm('Bạn chắc chắn muốn xóa khóa học này?');">
                                                <input type="hidden" name="id" value="@item.value.CourseId" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Xóa"><i class="fas fa-trash"></i></button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (Model.Courses.TotalPage > 1)
                {
                    <nav aria-label="Phân trang" class="mt-4">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Model.SearchRequest.PageNumber == 1 ? "disabled" : "")">
                                <a class="page-link" href="@Model.CreatePagingUrl(Model.SearchRequest.PageNumber - 1)"><i class="fas fa-chevron-left"></i> Trước</a>
                            </li>
                            @{ var start = Math.Max(1, Model.SearchRequest.PageNumber - 2); var end = Math.Min(Model.Courses.TotalPage, Model.SearchRequest.PageNumber + 2); }
                            @if (start > 1)
                            {
                                <li class="page-item"><a class="page-link" href="@Model.CreatePagingUrl(1)">1</a></li>
                                @if (start > 2) { <li class="page-item disabled"><span class="page-link">...</span></li> }
                            }
                            @for (int i = start; i <= end; i++)
                            {
                                <li class="page-item @(i == Model.SearchRequest.PageNumber ? "active" : "")"><a class="page-link" href="@Model.CreatePagingUrl(i)">@i</a></li>
                            }
                            @if (end < Model.Courses.TotalPage)
                            {
                                @if (end < Model.Courses.TotalPage - 1) { <li class="page-item disabled"><span class="page-link">...</span></li> }
                                <li class="page-item"><a class="page-link" href="@Model.CreatePagingUrl(Model.Courses.TotalPage)">@Model.Courses.TotalPage</a></li>
                            }
                            <li class="page-item @(Model.SearchRequest.PageNumber == Model.Courses.TotalPage ? "disabled" : "")">
                                <a class="page-link" href="@Model.CreatePagingUrl(Model.SearchRequest.PageNumber + 1)">Sau <i class="fas fa-chevron-right"></i></a>
                            </li>
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-search fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Không tìm thấy khóa học nào</h5>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('select[name="SearchRequest.LicenceTypeId"], select[name="SearchRequest.Status"]').change(function () {
                $('input[name="SearchRequest.PageNumber"]').val(1);
                $(this).closest('form').submit();
            });
            $('input[type="text"], input[type="date"], input[type="month"]').keypress(function (e) {
                if (e.which === 13) {
                    $('input[name="SearchRequest.PageNumber"]').val(1);
                    $(this).closest('form').submit();
                    return false;
                }
            });
        });
    </script>
}

